<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title id="pageTitle">EIEL {{ fase_actual }} - Redireccionando...</title>
<style>
body { 
    font-family: 'Inter', Arial, sans-serif; 
    display: flex; 
    justify-content: center; 
    align-items: center; 
    min-height: 100vh; 
    margin: 0; 
    background: #f0f8ff; 
}
body .panel { 
    background: white; 
    padding: 40px; 
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1); 
    text-align: center;
    max-width: 500px; 
    width: 90%;
}
h1 { 
    color: #3F51B5; 
    margin-bottom: 5px; 
}
#statusMessage { 
    color: #666; 
    margin-bottom: 25px; 
}
.muni-info { 
    font-size: 1.4em; 
    font-weight: 700; 
    color: #008080; 
    margin-bottom: 20px; 
}
.loader { 
    border: 4px solid #f3f3f3; 
    border-top: 4px solid #3F51B5; 
    border-radius: 50%; 
    width: 30px; 
    height: 30px; 
    animation: spin 1s linear infinite; 
    margin: 20px auto; 
}
@keyframes spin { 
    0% { transform: rotate(0deg); } 
    100% { transform: rotate(360deg); } 
}
/* Estilos para botones */
body .btn-base { 
    display: block;
    width: 100%;
    padding: 0.75rem;
    font-weight: bold;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    color: white;
}
.btn-agua { background-color: #2563eb; }
.btn-agua:hover { background-color: #1d4ed8; }
.btn-obras { background-color: #4f46e5; }
.btn-obras:hover { background-color: #4338ca; }
.btn-residuos { background-color: #14b8a6; }
.btn-residuos:hover { background-color: #0d9488; }
.btn-cementerios { background-color: #7c3aed; }
.btn-cementerios:hover { background-color: #6d28d9; }
.btn-logout { background-color: #ef4444; margin-top: 20px; } 

.hidden {
    display: none;
}
#contenido-protegido { display: none; } /* Oculto inicialmente */
</style>
<script src="https://cdn.tailwindcss.com"></script>

</head>
<body>

<div class="panel">
<h1 class="text-3xl">EIEL {{ fase_actual }}</h1>
<p id="statusMessage">Cargando estado de la sesión...</p>

<div id="loadingSection">
    <div class="loader" id="loader"></div>
    <p id="errorMsg" style="color: #ef4444; font-weight: 600;" class="hidden">
        Error: Sesión no válida o municipio no autorizado. Redirigiendo a Login.
    </p>
</div>

<div id="contenido-protegido">
    <div class="muni-info">
        Municipio: <span id="muniNamePlaceholder">Cargando identidad...</span>
        <p style="font-size: 0.75em; font-weight: 400; color: #666; margin-top: 5px;">
            <span id="userEmailPlaceholder"></span>
        </p>
    </div>

    <div id="muniLinks" style="margin-top: 1.5rem;">
        <p style="font-size: 1.125rem; font-weight: 600; color: #374151; margin-bottom: 1rem;">
            Seleccione el formulario a rellenar:
        </p>
        <div style="display: flex; flex-direction: column; gap: 1rem;">
            <a id="linkAgua" href="#" class="btn-base btn-agua">
                Formulario: Abastecimiento de Agua
            </a>
            <a id="linkObras" href="#" class="btn-base btn-obras">
                Formulario: Obras y Actuaciones
            </a>
            <a id="linkResiduos" href="#" class="btn-base btn-residuos">
                Formulario: Residuos y Limpieza Viaria
            </a>
            <a id="linkCementerios" href="#" class="btn-base btn-cementerios">
                Formulario: Cementerios
            </a>
        </div>
        
        <button id="btnLogout" class="btn-base btn-logout">
            Cerrar Sesión
        </button>
    </div>
</div>

</div> <script type="module">
    // Importación de Firebase 
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-app.js";
    import { getAuth, signOut, onAuthStateChanged } 
      from "https://www.gstatic.com/firebasejs/9.22.0/firebase-auth.js";

    // 1. CONFIGURACIÓN Y DATOS (Inyectados por Jinja)
    // ESTAS VARIABLES DEBEN SER PROCESADAS POR PYTHON/JINJA2
    const FIREBASE_CONFIG = {{ firebase_config_data | safe }}; 
    const MUNICIPIOS_DATA = {{ municipios_json_data | safe }}; 
    const EMAIL_TO_CODE_MAP = {{ mapeo_email_codigo_data | safe }}; 
    
    // 2. INICIALIZACIÓN Y REFERENCIAS
    const app = initializeApp(FIREBASE_CONFIG);
    const auth = getAuth(app);
    
    const muniNamePlaceholder = document.getElementById("muniNamePlaceholder");
    const userEmailPlaceholder = document.getElementById("userEmailPlaceholder");
    const pageTitle = document.getElementById("pageTitle");
    const errorMsg = document.getElementById("errorMsg");
    const loadingSection = document.getElementById("loadingSection");
    const protectedContent = document.getElementById('contenido-protegido');
    const statusMessage = document.getElementById("statusMessage");
    const btnLogout = document.getElementById("btnLogout");

    const linkAgua = document.getElementById("linkAgua");
    const linkObras = document.getElementById("linkObras");
    const linkResiduos = document.getElementById("linkResiduos");
    const linkCementerios = document.getElementById("linkCementerios");


    // 3. FUNCIÓN DE REDIRECCIÓN A FALLO
    const redirectToLogin = (message) => {
        muniNamePlaceholder.textContent = "Acceso Denegado";
        statusMessage.textContent = message;
        errorMsg.classList.remove("hidden");
        document.getElementById("loader").classList.add("hidden"); 

        setTimeout(() => {
            window.location.replace("login.html");
        }, 3000);
    };

    // 4. FUNCIÓN PRINCIPAL DE AUTORIZACIÓN 
    const handleAuthUser = (user) => {
        if (!user) {
            // No hay usuario logueado -> Redirigir
            redirectToLogin("¡Necesita iniciar sesión para acceder al portal!");
            return;
        }

        const userEmail = user.email.toLowerCase();
        
        // Mapear Email a Código de Municipio
        const muniCodeRaw = EMAIL_TO_CODE_MAP[userEmail];
        
        if (!muniCodeRaw) {
            // Usuario logueado, pero no autorizado en el mapa (Fallo de Autorización)
            redirectToLogin(`Usuario ${userEmail} no autorizado.`);
            return;
        }

        // ÉXITO: Identificación y Configuración de Enlaces
        const normalizedMuniCode = String(muniCodeRaw).padStart(3, '0');
        
        // Crear mapa de códigos a nombres para el UI (usa MUNICIPIOS_DATA)
        const muniMap = {};
        MUNICIPIOS_DATA.forEach(muni => {
            muniMap[String(muni.code).padStart(3, '0')] = muni.name;
        });

        const actualMuniName = muniMap[normalizedMuniCode] || `Código ${normalizedMuniCode} Desconocido`;
        
        // Actualización de la UI
        userEmailPlaceholder.textContent = user.email;
        muniNamePlaceholder.textContent = actualMuniName;
        pageTitle.textContent = `EIEL {{ fase_actual }} - ${actualMuniName} (${normalizedMuniCode})`;
        statusMessage.textContent = "Identificación completada. Seleccione una opción:";

        // Configurar los enlaces
        linkAgua.href = `formularios/agua_${normalizedMuniCode}.html`;
        linkObras.href = `formularios/obras_${normalizedMuniCode}.html`;
        linkResiduos.href = `formularios/residuos_${normalizedMuniCode}.html`;
        linkCementerios.href = `formularios/cementerios_${normalizedMuniCode}.html`;

        // Ocultar la carga y mostrar el contenido
        loadingSection.classList.add("hidden");
        protectedContent.style.display = 'block'; 
    };

    // 5. ESCUCHA DE FIREBASE AL CARGAR LA PÁGINA
    onAuthStateChanged(auth, handleAuthUser);
    
    // 6. CERRAR SESIÓN
    btnLogout.addEventListener('click', () => {
        signOut(auth).then(() => {
            window.location.replace('login.html');
        }).catch((error) => {
            alert("Error al cerrar sesión.");
            console.error(error);
        });
    });

</script>
</body>
</html>