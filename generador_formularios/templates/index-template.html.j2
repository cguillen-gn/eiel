<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title id="pageTitle">EIEL {{ fase_actual }} - Redireccionando...</title>
<script src="https://cdn.tailwindcss.com"></script>
<style>
body { 
    font-family: 'Inter', Arial, sans-serif; 
    display: flex; 
    justify-content: center; 
    align-items: center; 
    min-height: 100vh; 
    margin: 0; 
    background: #f0f8ff; 
}
.panel {
    background: white; 
    padding: 40px; 
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1); 
    text-align: center;
    max-width: 500px; 
    width: 90%;
}
h1 { 
    color: #3F51B5; 
    margin-bottom: 5px; 
}
#statusMessage { 
    color: #666; 
    margin-bottom: 25px; 
}
.muni-info { 
    font-size: 1.4em; 
    font-weight: 700; 
    color: #008080; 
    margin-bottom: 20px; 
}
.loader { 
    border: 4px solid #f3f3f3; 
    border-top: 4px solid #3F51B5; 
    border-radius: 50%; 
    width: 30px; 
    height: 30px; 
    animation: spin 1s linear infinite; 
    margin: 20px auto; 
}
@keyframes spin { 
    0% { transform: rotate(0deg); } 
    100% { transform: rotate(360deg); } 
}
/* Estilos personalizados para los botones (fallback si Tailwind falla) */
.btn-base {
    display: block;
    width: 100%;
    padding: 0.75rem;
    font-weight: bold;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    color: white;
}
.btn-agua {
    background-color: #2563eb;
}
.btn-agua:hover {
    background-color: #1d4ed8;
}
.btn-obras {
    background-color: #4f46e5;
}
.btn-obras:hover {
    background-color: #4338ca;
}
.btn-residuos {
    background-color: #14b8a6;
}
.btn-residuos:hover {
    background-color: #0d9488;
}
.btn-cementerios {
    background-color: #7c3aed;
}
.btn-cementerios:hover {
    background-color: #6d28d9;
}
.hidden {
    display: none;
}
</style>
</head>
<body>

<div class="panel">
<h1 class="text-3xl">EIEL {{ fase_actual }}</h1>
<p id="statusMessage">Identificando municipio y cargando menú...</p>

<div class="muni-info">
    Municipio: <span id="muniNamePlaceholder">Cargando identidad...</span>
</div>

<!-- Sección de carga y error -->
<div id="loadingSection">
    <div class="loader" id="loader"></div>
    <p id="errorMsg" style="color: #ef4444; font-weight: 600;" class="hidden">
        Error: No se encontró la identidad del municipio. Redirigiendo a Login.
    </p>
</div>

<!-- Sección de navegación -->
<div id="muniLinks" class="hidden" style="margin-top: 1.5rem;">
    <p style="font-size: 1.125rem; font-weight: 600; color: #374151; margin-bottom: 1rem;">
        Seleccione el formulario a rellenar:
    </p>
    <div style="display: flex; flex-direction: column; gap: 1rem;">
        <a id="linkAgua" href="#" class="btn-base btn-agua">
            Formulario: Abastecimiento de Agua
        </a>
        <a id="linkObras" href="#" class="btn-base btn-obras">
            Formulario: Obras y Actuaciones
        </a>
        <a id="linkResiduos" href="#" class="btn-base btn-residuos">
            Formulario: Residuos y Limpieza Viaria
        </a>
        <a id="linkCementerios" href="#" class="btn-base btn-cementerios">
            Formulario: Cementerios
        </a>
    </div>
</div>

</div>

<script>
// La lista completa de municipios se inyecta aquí desde Python
const MUNICIPIOS_DATA = {{ municipios_json_data | safe }};

console.log("MUNICIPIOS_DATA cargados:", MUNICIPIOS_DATA);

document.addEventListener("DOMContentLoaded", () => {
    const muniCode = localStorage.getItem("usuarioActual");
    const muniNamePlaceholder = document.getElementById("muniNamePlaceholder");
    const pageTitle = document.getElementById("pageTitle");
    const errorMsg = document.getElementById("errorMsg");
    const loader = document.getElementById("loader");
    const loadingSection = document.getElementById("loadingSection");
    const muniLinks = document.getElementById("muniLinks");
    const statusMessage = document.getElementById("statusMessage");

    const linkAgua = document.getElementById("linkAgua");
    const linkObras = document.getElementById("linkObras");
    const linkResiduos = document.getElementById("linkResiduos");
    const linkCementerios = document.getElementById("linkCementerios");

    console.log("Código de municipio desde localStorage:", muniCode);

    // Crear mapa de códigos a nombres
    const muniMap = {};
    MUNICIPIOS_DATA.forEach(muni => {
        // Normalizar el código a 3 dígitos con ceros a la izquierda
        const normalizedCode = String(muni.code).padStart(3, '0');
        muniMap[normalizedCode] = muni.name;
        console.log(`Mapeado: ${normalizedCode} -> ${muni.name}`);
    });

    console.log("Mapa de municipios:", muniMap);

    if (!muniCode) {
        muniNamePlaceholder.textContent = "Acceso Denegado";
        statusMessage.textContent = "¡Necesita iniciar sesión para acceder al portal!";
        errorMsg.textContent = "Error: Sesión no encontrada. Redirigiendo a 'login.html'.";
        errorMsg.classList.remove("hidden");
        loader.classList.add("hidden");
        setTimeout(() => {
            window.location.replace("login.html");
        }, 3000);
        return;
    }

    // Normalizar el código del usuario a 3 dígitos
    const normalizedMuniCode = String(muniCode).padStart(3, '0');
    console.log("Código normalizado:", normalizedMuniCode);

    // Buscar el nombre usando el código normalizado
    const actualMuniName = muniMap[normalizedMuniCode];
    console.log("Nombre encontrado:", actualMuniName);

    if (!actualMuniName) {
        muniNamePlaceholder.textContent = `Código ${normalizedMuniCode} no válido`;
        statusMessage.textContent = "Error crítico de identidad. El código no se encuentra en el listado.";
        errorMsg.textContent = "Error: Código de municipio desconocido. Redirigiendo a 'login.html'.";
        errorMsg.classList.remove("hidden");
        loader.classList.add("hidden");
        setTimeout(() => {
            window.location.replace("login.html");
        }, 3000);
        return;
    }

    // ÉXITO: Actualización Dinámica
    muniNamePlaceholder.textContent = actualMuniName;
    pageTitle.textContent = `EIEL {{ fase_actual }} - ${actualMuniName} (${normalizedMuniCode})`;
    statusMessage.textContent = "Identificación completada. Seleccione una opción:";

    // Configurar los enlaces con el código normalizado
    linkAgua.href = `formularios/agua_${normalizedMuniCode}.html`;
    linkObras.href = `formularios/obras_${normalizedMuniCode}.html`;
    linkResiduos.href = `formularios/residuos_${normalizedMuniCode}.html`;
    linkCementerios.href = `formularios/cementerios_${normalizedMuniCode}.html`;


    // Ocultar la carga y mostrar el menú
    loadingSection.classList.add("hidden");
    muniLinks.classList.remove("hidden");
});
</script>

</body>
</html>