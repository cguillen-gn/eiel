﻿{% extends "base.html.j2" %}

{% block bloque_fase %}
    Fase {{ fase_actual }}
{% endblock %}

{% block title %}Obras y Actuaciones{% endblock %}
{% block header_icon %}🏗️{% endblock %}
{% block header_title %}Obras y Actuaciones{% endblock %}

{% block content %}

{# --- INSTRUCCIONES --- #}
<div style="background-color: #eff6ff; border-left: 4px solid #3b82f6; padding: 1.2rem; border-radius: 4px; margin-bottom: 20px; box-shadow: 0 1px 2px rgba(0,0,0,0.05);">
    <h4 style="margin: 0 0 0.8rem 0; font-weight: 700; color: #1e40af; display: flex; align-items: center; gap: 8px;">
        ℹ️ Instrucciones
    </h4>
    <ul style="margin: 0 0 0 1.5rem; padding: 0; list-style-type: disc; color: var(--text-main); font-size: 0.95rem; line-height: 1.5;">
        <li style="margin-bottom: 0.5rem;">
            <strong>Estado:</strong> Rellene el estado en todas las obras del listado.
        </li>
        <li style="margin-bottom: 0.5rem;">
            <strong>Documentación:</strong> Adjunte proyecto de la obra. En caso de no haberse redactado proyecto, adjunte la documentación disponible. Si no dispone de documentación, justifíquelo en el apartado final de observaciones.
        </li>
    </ul>
</div>

{# --- TABLA DE OBRAS --- #}
<div class="card" style="border-left: 4px solid var(--theme-obras);">
    <div class="table-wrapper" style="margin: 0;">
        <table class="data-table">
            <thead>
                <tr>
                    <th style="width: 8%; text-align: center !important;">Id</th>
                    <th style="width: 57%;">Denominación</th>
                    <th style="width: 20%; text-align: center !important;">Estado</th>
                    <th style="width: 15%; text-align: center !important;">Documentación</th>
                </tr>
            </thead>
            
            <tbody>
                {% for o in obras %}
                {% set codigo_obra = o.clave ~ o.mun ~ o.orden %}
                <tr class="fila-obra">
                    
                    <td style="text-align: center !important; font-size: 0.8rem; color: var(--text-muted); font-weight: 500;">
                        {{ codigo_obra[-3:] }}
                    </td>

                    <td>
                       
                        <div style="font-weight: 600; color: #1e293b; margin-bottom: 2px;">{{ o.nombre }}</div>
                        
                        {# VISUALIZACIÓN DEL PLAN #}
                            {% if o.plan_obra %}
                                {% set plan_lower = o.plan_obra | lower %}
                                {% if 'licitaciones' not in plan_lower and 'contratos menores' not in plan_lower %}
                                    <div style="font-size: 0.8rem; color: var(--text-muted);">
                                        <span class="label-caps">SUBVENCIÓN</span> 
                                        {{ o.plan_obra }}
                                    </div>
                                {% endif %}
                            {% endif %}
                        </td>
                  
                    
                    
                    <td style="text-align: center !important;">
                        <select class="form-select select-estado" 
                            style="padding: 8px; font-size: 0.85rem; border-color: #cbd5e1; width: 100%;"
                            data-obra-id="{{ codigo_obra }}" 
                            data-clave="{{ o.clave }}"
                            data-orden="{{ o.orden }}"
                            data-nombre="{{ o.nombre }}" 
                            data-plan="{{ o.plan_obra }}"
                            data-requiere-doc="{{ 'false' if o.proyecto == 'RE' else 'true' }}">
                            
                            <option value="" {% if o.cond == 0 %}selected{% endif %} style="color: #94a3b8;">
                                Seleccionar...
                            </option>
                            <option value="No iniciada">No iniciada</option>
                            <option value="En ejecución">En ejecución</option>
                            <option value="Paralizada">Paralizada</option>
                            <option value="Finalizada" {% if o.cond == 2 %}selected{% endif %}>
                                Finalizada
                            </option>
                        </select>
                    </td>

                    <td style="text-align: center !important;">
                        {% if o.proyecto == 'RE' %}
                            <div style="background-color: #f1f5f9; color: #64748b; padding: 0.5rem; border-radius: 6px; 
                                    border: 1px solid #e2e8f0; font-size: 0.75rem; font-weight: 600; 
                                    display: inline-flex; align-items: center; gap: 4px;">
                            ℹ️ No requiere adjuntar documentación
                        </div>
                        {% else %}
                            <button type="button" class="btn btn-secondary" 
                                style="font-size: 0.8rem; padding: 0.5rem 0.8rem; border: 1px solid #cbd5e1; background: white; color: #475569; transition: all 0.2s;" 
                                onmouseover="this.style.borderColor='var(--theme-obras)'; this.style.color='var(--theme-obras)';"
                                onmouseout="this.style.borderColor='#cbd5e1'; this.style.color='#475569';"
                                onclick="gestionarAdjuntos('{{ codigo_obra }}')">
                                📎 Adjuntar
                            </button>
                            <div id="lista_adjuntos_{{ codigo_obra }}" style="margin-top: 5px; text-align: left;"></div>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{# --- TARJETA DE OTRAS OBRAS --- #}
<div class="card" style="border: 2px dashed #94a3b8; background-color: #f8fafc;">
    
    <h2 class="section-title title-obras">
        ➕ Otras Obras en el Municipio
    </h2>

    <div class="card-body">
        <p style="font-size: 0.9rem; color: var(--text-muted); margin-bottom: 1.5rem;">
            Indique cualquier otra obra aprobada (iniciada o no) que <strong>no aparezca en el listado superior</strong>. 
            Si no hay ninguna, déjelo en blanco.
        </p>

        <div class="form-group">
            <label class="form-label" for="otras_obras_texto" style="font-weight: 600;">Descripción / Denominación de la Obra:</label>
            <textarea 
                class="form-input" 
                id="otras_obras_texto" 
                name="otras_obras_texto" 
                rows="4" 
                placeholder="Ej: Reurbanización calle Mayor (POS 2025), Renovación alumbrado Polígono..."
            ></textarea>
        </div>

        <div class="form-group" style="margin-top: 1.5rem;">
            <label class="form-label" style="font-weight: 600;">Adjuntar proyecto o memoria (Opcional):</label>
            
            <div class="file-upload-area" onclick="document.getElementById('fileInputNuevas').click()" 
                 style="border: 2px dashed #cbd5e1; padding: 1.5rem; text-align: center; cursor: pointer; border-radius: 8px; background: white; transition: all 0.2s;">
                <div style="font-size: 1.8rem; margin-bottom: 0.5rem; opacity: 0.7;">📎</div>
                <div style="font-weight: 600; color: #475569;">Haga clic para adjuntar documentos</div>
                <p style="font-size: 0.85rem; color: #94a3b8; margin: 0;">(Proyectos, memorias, planos...)</p>
                <input type="file" id="fileInputNuevas" multiple style="display: none;">
            </div>
            
            <div id="fileListNuevas" style="margin-top: 0.8rem; display: flex; flex-direction: column; gap: 0.5rem;"></div>
        </div>

    </div>
</div>


{# --- REQUERIMIENTOS --- #}
{% if avisos_personalizados and avisos_personalizados|length > 0 %}
<div class="card" style="border-left: 4px solid #FCD34D; background-color: #FEFCE8;">
    <div style="padding: 1rem;">
        <h4 style="margin-top: 0; color: #92400E; display: flex; align-items: center; gap: 8px;">
            ⚠️ Otra información solicitada
        </h4>
        <p style="font-size: 0.9rem;margin-bottom: 1rem;">
            A continuación se muestran datos específicos solicitados. Puede contestar en <strong>Observaciones</strong> y añadir archivos si procede.
        </p>
        
        <ul style="list-style: none; padding: 0; margin: 0;">
            {% for aviso in avisos_personalizados %}
                <li style="background: white; padding: 10px; margin-bottom: 8px; border-radius: 6px; 
                           border: 1px solid {{ '#FECACA' if aviso.prioridad == 'alta' else '#FDE68A' }};
                           display: flex; align-items: flex-start; gap: 10px;">
                    
                    {# Icono según prioridad #}
                    <span style="font-size: 1.2rem; line-height: 1;">
                        {% if aviso.prioridad == 'alta' %}🔴{% else %}🔸{% endif %}
                    </span>

                    <div style="flex: 1;">
                        {# Mensaje #}
                        <span style="font-weight: 500; display: block;">
                            {{ aviso.mensaje }}
                        </span>

                        {# --- LÓGICA DE HIPERVÍNCULO (URL) --- #}
                        {% if aviso.url %}
                            <div style="margin-top: 8px;">
                                <a href="{{ aviso.url }}" target="_blank" 
                                   style="display: inline-flex; align-items: center; gap: 6px; 
                                          background-color: #f8fafc; color: #475569; 
                                          padding: 4px 12px; border-radius: 4px; font-size: 0.8rem; 
                                          text-decoration: none; border: 1px solid #cbd5e1; 
                                          font-weight: 600; transition: all 0.2s;"
                                   onmouseover="this.style.borderColor='#94a3b8'; this.style.backgroundColor='#f1f5f9';"
                                   onmouseout="this.style.borderColor='#cbd5e1'; this.style.backgroundColor='#f8fafc';">
                                    🌐 Ver en Geoportal
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endif %}

{# --- OBSERVACIONES --- #}
<div class="card" style="border-left: 4px solid var(--theme-obras);">
    <h2 class="section-title title-obras">📝 Observaciones</h2>
    <div class="form-group">
        <label for="observaciones" class="form-label">Comentarios adicionales:</label>
        <textarea id="observaciones" class="form-input" rows="4" style="font-family: inherit;" placeholder="Indique aquí cualquier incidencia, aclaración o dato relevante..."></textarea>
    </div>
</div>

{# --- CONTACTO Y ENVÍO --- #}
<div class="card" style="border-left: 4px solid var(--theme-obras);">
    <h2 class="section-title title-obras">👤 Datos de Contacto</h2>
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
        <div class="form-group">
            <label class="form-label">Nombre y apellidos *</label>
            <input type="text" id="contactoNombre" class="form-input" placeholder="Ej: Juan Pérez" required>
        </div>
        <div class="form-group">
            <label class="form-label">Departamento</label>
            <input type="text" id="contactoDepartamento" class="form-input" placeholder="Ej: Urbanismo" required>
        </div>
        <div class="form-group">
            <label class="form-label">Email (Para recibir justificante) *</label>
            <input type="email" id="contactoEmail" class="form-input" placeholder="Ej: ejemplo@ayuntamiento.es" required>
        </div>
        
        <div class="form-group">
            <label class="form-label">Confirme su Email *</label>
            <input type="email" id="contactoEmailConfirm" class="form-input" placeholder="Repita el email" required onpaste="return false;">
            </div>
    </div>
</div>

<div class="card" style="border-left: 4px solid var(--theme-obras);">
    <div style="margin-bottom: 1.5rem; padding: 1rem; background-color: #f8fafc; border: 1px solid #e2e8f0; border-radius: 8px;">
        <label style="display: flex; gap: 10px; cursor: pointer; align-items: flex-start;">
            <input type="checkbox" id="checkConformidad" style="width: 20px; height: 20px; margin-top: 2px; cursor: pointer;">
            <span style="font-size: 0.95rem; color: #334155; line-height: 1.4;">
                <strong>Declaración de veracidad:</strong> Como responsable, 
                confirmo que los datos introducidos son correctos y actualizados.
            </span>
        </label>
    </div>
    
    <div id="progressContainer" style="display: none; margin-bottom: 20px;">
    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
        <span id="progressText" style="font-size: 0.85rem; font-weight: 600; color: #475569;">Preparando envío...</span>
        <span id="progressPercentage" style="font-size: 0.85rem; font-weight: 700; color: var(--theme-obras);">0%</span>
    </div>
    <div style="width: 100%; background-color: #e2e8f0; border-radius: 999px; height: 10px; overflow: hidden;">
        <div id="progressBar" style="width: 0%; height: 100%; background-color: var(--theme-obras); transition: width 0.4s ease; border-radius: 999px;"></div>
    </div>
    </div>

    <button id="btnEnviar" class="btn btn-primary btn-obras" disabled style="opacity: 0.6; cursor: not-allowed;">
        Enviar Datos
    </button>
    
    <div id="mensaje" class="message"></div>
</div>

<input type="file" id="hiddenFileInput" multiple style="display: none;">

{% endblock %}

{% block scripts %}
<script>
document.addEventListener("DOMContentLoaded", () => {
    
    // 1. SETUP DE ESTILOS
    const header = document.querySelector('.site-header');
    if(header) header.classList.add('header-obras');
    
    // Cambio de color dinámico para los estados
    document.querySelectorAll('.select-estado').forEach(select => {
        if (select.value !== "") select.classList.add('has-value');
        
        select.addEventListener('change', function() {
            if (this.value !== "") 
                this.classList.add('has-value');
            else 
                this.classList.remove('has-value');
        });
    });

    // 2. CONFIGURACIÓN GLOBAL
    window.EIEL_CONFIG = {
        muniCode: "{{ muni_code }}",
        muniName: "{{ muni_display }}",
        fase: "{{ fase_actual }}",
        urlGenerarPdf: "{{ url_generar_pdf }}",
        urlAdjuntos: "{{ url_adjuntos }}",
        urlLogger: "{{ url_logger }}",
        hasAvisos: {{ 'true' if avisos_personalizados and avisos_personalizados|length > 0 else 'false' }},
        yearActual: new Date().getFullYear() // Año dinámico para validaciones
    };

    // 3. INICIALIZACIÓN UI
    // 3.1 Marcado visual de obligatoriedad en observaciones
    if (window.EIEL_CONFIG.hasAvisos) {
        const labelObs = document.querySelector("label[for='observaciones']");
        if (labelObs) {
            labelObs.innerHTML += " <span style='color:#ef4444; font-weight:bold;'>(* Obligatorio por requerimiento)</span>";
        }
    }

    // 4. SERVICIOS Y UTILIDADES DE UI
    const UIProgress = {
    container: document.getElementById("progressContainer"),
    bar: document.getElementById("progressBar"),
    text: document.getElementById("progressText"),
    percent: document.getElementById("progressPercentage"),
    // Variable para recordar el punto más alto alcanzado
    maxReached: 0, 

    show(totalTasks) {
        this.maxReached = 0; // Reiniciamos al empezar
        if (this.container) this.container.style.display = 'block';
        this.update(0, totalTasks, "Iniciando envío...");
    },

    update(completed, total, message) {
        const msg = message.toLowerCase();
        // Detectamos si es el paso del registro o PDF
        const isFinalStep = msg.includes("pdf") || msg.includes("registro") || msg.includes("justificante");
        
        let targetPercentage = 0;
        if (total > 0) {
            const fileWeight = 90 / total;
            targetPercentage = isFinalStep ? 95 : Math.round(completed * fileWeight);
        } else {
            targetPercentage = isFinalStep ? 95 : 0;
        }

        // --- EL BLOQUEO DE SEGURIDAD ---
        // Solo actualizamos si el nuevo porcentaje es mayor al que ya mostramos
        if (targetPercentage > this.maxReached) {
            this.maxReached = targetPercentage;
            if (this.bar) this.bar.style.width = this.maxReached + "%";
            if (this.percent) this.percent.textContent = this.maxReached + "%";
        }
        
        // El texto sí lo actualizamos siempre para dar feedback constante
        if (this.text && message) this.text.textContent = message;
    },

    complete() {
        this.maxReached = 100;
        if (this.bar) {
            this.bar.style.width = "100%";
            this.bar.style.backgroundColor = "#22c55e"; // Color de éxito
        }
        if (this.percent) this.percent.textContent = "100%";
        if (this.text) this.text.textContent = "✅ ¡Envío completado con éxito!";
    }
    };

    const UploadService = {
        toBase64: file => new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => resolve(reader.result.split(',')[1]);
            reader.onerror = error => reject(error);
        }),

        async uploadFile(file, tipoFicha, muniCode, codigoObra = null, idEnvio) {
            try {
                const base64 = await this.toBase64(file);
                const contactoEmail = document.getElementById("contactoEmail")?.value || "anonimo";

                const payload = {
                    filename: file.name,
                    mimeType: file.type,
                    bytesBase64: base64, 
                    municipio: muniCode,
                    usuario: contactoEmail,
                    tipo: tipoFicha,
                    seccion: codigoObra,
                    id_envio: idEnvio
                };
                
                await fetch(window.EIEL_CONFIG.urlAdjuntos, {
                    method: 'POST',
                    mode: 'no-cors',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                return true;
            } catch (e) {
                console.error("Error subiendo:", e);
                return false;
            }
        }
    };

    // 5. GESTIÓN DE ARCHIVOS (TABLA)
    let colaAdjuntos = {}; 
    let obraActualSeleccion = null;
    const hiddenInput = document.getElementById("hiddenFileInput");

    window.gestionarAdjuntos = (codigoObra) => {
        obraActualSeleccion = codigoObra;
        hiddenInput.click();
    };

    window.eliminarDeCola = (codigoObra, index) => {
        if (colaAdjuntos[codigoObra]) {
            colaAdjuntos[codigoObra].splice(index, 1);
            renderCola(codigoObra);
        }
    };

    if(hiddenInput) {
        hiddenInput.onchange = () => {
            const files = Array.from(hiddenInput.files);
            if (!files.length || !obraActualSeleccion) return;

            if (!colaAdjuntos[obraActualSeleccion]) {
                colaAdjuntos[obraActualSeleccion] = [];
            }
            colaAdjuntos[obraActualSeleccion].push(...files);
            renderCola(obraActualSeleccion);
            
            hiddenInput.value = "";
            obraActualSeleccion = null;
        };
    }

    function renderCola(codigoObra) {
        const contenedor = document.getElementById(`lista_adjuntos_${codigoObra}`);
        if(!contenedor) return;
        const archivos = colaAdjuntos[codigoObra] || [];
        
        if (archivos.length === 0) {
            contenedor.innerHTML = "";
            return;
        }

        contenedor.innerHTML = archivos.map((f, i) => `
            <div style="display: flex; justify-content: space-between; align-items: center; 
                        background: #f1f5f9; padding: 4px 8px; border-radius: 4px; 
                        margin-top: 4px; font-size: 0.75rem; border: 1px solid #e2e8f0;">
                <span style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 120px;" title="${f.name}">
                    📄 ${f.name}
                </span>
                <button type="button" onclick="eliminarDeCola('${codigoObra}', ${i})" 
                        style="background:none; border:none; color: #ef4444; cursor:pointer; font-weight:bold; margin-left:5px;">
                    ✖
                </button>
            </div>
        `).join("");
    }

    // 5.1 GESTIÓN DE ARCHIVOS (NUEVAS OBRAS)
    let archivosNuevas = [];
    const fileInputNuevas = document.getElementById("fileInputNuevas");
    const fileListNuevas = document.getElementById("fileListNuevas");

    if (fileInputNuevas) {
        fileInputNuevas.addEventListener('change', () => {
            archivosNuevas.push(...Array.from(fileInputNuevas.files));
            renderArchivosNuevas();
            fileInputNuevas.value = '';
        });
    }

    window.eliminarArchivoNuevas = (i) => {
        archivosNuevas.splice(i, 1);
        renderArchivosNuevas();
    };

    function renderArchivosNuevas() {
        if (!fileListNuevas) return;
        if (archivosNuevas.length === 0) {
            fileListNuevas.innerHTML = "";
            return;
        }
        fileListNuevas.innerHTML = archivosNuevas.map((f, i) => `
            <div style="display: flex; justify-content: space-between; align-items: center; 
                        background: white; padding: 0.5rem 1rem; border-radius: 6px; 
                        border: 1px solid #e2e8f0; font-size: 0.9rem; margin-bottom: 0.5rem;">
                <span style="display:flex; align-items:center; gap:8px;">📄 ${f.name}</span>
                <button type="button" onclick="eliminarArchivoNuevas(${i})" 
                        style="background:none; border:none; color:#ef4444; cursor:pointer; font-weight:bold;">✕</button>
            </div>
        `).join("");
    }

    // 6. LÓGICA DE ENVÍO Y VALIDACIÓN
    const btnEnviar = document.getElementById("btnEnviar");
    const checkConformidad = document.getElementById("checkConformidad"); 
    const mensajeDiv = document.getElementById("mensaje"); 

    function mostrarMensaje(texto, tipo) {
        if(!mensajeDiv) return;
        mensajeDiv.textContent = texto; 
        mensajeDiv.className = `message ${tipo}`; 
        mensajeDiv.style.display = 'block';
    }

    // 6.1 Checkbox Habilitador
    if (checkConformidad && btnEnviar) {
        checkConformidad.addEventListener('change', function() {
            if (this.checked) {
                btnEnviar.disabled = false;
                btnEnviar.style.opacity = "1";
                btnEnviar.style.cursor = "pointer"; 
            } else {
                btnEnviar.disabled = true;
                btnEnviar.style.opacity = "0.6";
                btnEnviar.style.cursor = "not-allowed"; 
            }
        });
    }

    // 6.2 Listener Principal de Envío
        if(btnEnviar) {
            btnEnviar.addEventListener("click", async () => {
                // A. Preparación y Bloqueo UI
                // Generamos el ID único del expediente al principio
                const idBatch = "ENVIO_" + new Date().getTime();
                
                // Usamos la función global para congelar todo el formulario durante el proceso
                toggleFormFreeze(true);

                // B. Lectura de Variables
                const nombreContacto = document.getElementById("contactoNombre").value.trim(); 
                const emailContacto = document.getElementById("contactoEmail").value.trim(); 
                const emailConfirmInput = document.getElementById("contactoEmailConfirm");
                const emailConfirm = emailConfirmInput ? emailConfirmInput.value.trim() : emailContacto;
                const departamentoVal = document.getElementById("contactoDepartamento").value.trim();
                const obsField = document.getElementById("observaciones");
                const obsValue = obsField.value.trim(); 
                const textoOtrasObras = document.getElementById("otras_obras_texto").value.trim();
                const regexEmail = /^[^@\s]+@[^@\s]+\.[^@\s]+$/;

                // C. Validaciones
                    // 1: Identidad (Bloqueante)
                    if (nombreContacto.length < 2) {
                        mostrarMensaje("⚠️ El nombre es demasiado corto.", "warning");
                        toggleFormFreeze(false); // Desbloqueamos si hay error
                        return;
                    }
                    if (!regexEmail.test(emailContacto) || emailContacto.toLowerCase() !== emailConfirm.toLowerCase()) {
                        mostrarMensaje("⚠️ Verifique que el Email sea válido y coincida.", "error");
                        toggleFormFreeze(false); 
                        return;
                    }

                    // 2: Estados e Integridad de Obras (Bloqueante)
                    const selects = document.querySelectorAll(".select-estado");
                    let obrasSinEstado = [];
                    let obrasFiSinDocs = [];

                    selects.forEach(select => {
                        const obraId = select.dataset.obraId;
                        const clave = select.dataset.clave;
                        const requiereDoc = select.dataset.requiereDoc === "true";

                        if (!select.value) {
                            obrasSinEstado.push(clave);
                        }

                        // Se añade a la lista de errores si el estado es 'Finalizada',  
                        // NO tiene adjuntos 
                        // Y requiere documentación (proyecto no es 'RE')
                        if (select.value === 'Finalizada' && requiereDoc && !(colaAdjuntos[obraId]?.length > 0)) {
                            obrasFiSinDocs.push(clave);
                        }
                    });

                    // 3: Requerimiento de Observaciones
                    const requiereObs = obrasSinEstado.length > 0 || obrasFiSinDocs.length > 0 || window.EIEL_CONFIG.hasAvisos;
                    if (requiereObs && obsValue.length < 15) {
                        let msg = "⚠️ Debe completar las Observaciones (mín. 15 caracteres) porque: ";
                        if (obrasSinEstado.length > 0) msg += "faltan estados en la tabla. ";
                        if (obrasFiSinDocs.length > 0) msg += "hay obras finalizadas para las que no se ha aportado documentación. ";
                        if (window.EIEL_CONFIG.hasAvisos) msg += "existen avisos pendientes. ";
                        mostrarMensaje(msg, "error");
                        obsField.focus(); 
                        toggleFormFreeze(false); 
                        return;
                    }
                    
                    // 4: Persistencia de datos del técnico (Memoria proactiva)
                    localStorage.setItem("eiel_user_name", nombreContacto);
                    localStorage.setItem("eiel_user_email", emailContacto);
                    localStorage.setItem("eiel_user_dept", departamentoVal);

                // D. Subida de Archivos a Google Drive
                const listaArchivosSubida = [];
                for (const [obraId, archivos] of Object.entries(colaAdjuntos)) {
                    archivos.forEach(file => listaArchivosSubida.push({ file, obraId }));
                }
                archivosNuevas.forEach(file => listaArchivosSubida.push({ file, obraId: 'OTRAS_OBRAS' }));
                
                const totalArchivos = listaArchivosSubida.length;
                let completados = 0;

                UIProgress.show(totalArchivos);

                if (totalArchivos > 0) {
                    const promesas = listaArchivosSubida.map(item => {
                        return UploadService.uploadFile(item.file, 'obra', window.EIEL_CONFIG.muniCode, item.obraId, idBatch)
                            .then(res => {
                                completados++;
                                UIProgress.update(completados, totalArchivos, `Subido: ${item.file.name}`);
                                return res;
                            });
                    });
                    await Promise.all(promesas);
                }

                // E. Recopilación de Datos para el Registro
                UIProgress.update(completados, totalArchivos, "Enviando datos y generando justificante PDF...");
                
                    // 1: Estados y adjuntos por obra para el PDF
                    const estados = [];
                    selects.forEach(select => {
                        if (select.value && select.value !== "") {
                            const obraId = select.dataset.obraId;
                            estados.push({
                                obra: obraId,
                                clave: select.dataset.clave,
                                orden: select.dataset.orden,
                                nombre: select.dataset.nombre,
                                plan: select.dataset.plan,
                                estado: select.value,
                                archivos: (colaAdjuntos[obraId] || []).map(f => f.name).join(";")
                            });
                        }
                    });

                    // 2: Verificación de contenido mínimo
                    if (estados.length === 0 && !textoOtrasObras && archivosNuevas.length === 0) {
                        mostrarMensaje("⚠️ No hay datos para enviar.", "warning");
                        UIProgress.container.style.display = 'none';
                        toggleFormFreeze(false);
                        return;
                    }

                    // 3: Preparación de observaciones finales
                    let obsFinal = obsValue;
                    if (textoOtrasObras || archivosNuevas.length > 0) {
                        obsFinal += "\n\n=== ➕ OTRAS OBRAS ===\n";
                        if(textoOtrasObras) obsFinal += "Descripción: " + textoOtrasObras + "\n";
                        if(archivosNuevas.length > 0) obsFinal += "Adjuntos: " + archivosNuevas.map(f => f.name).join(", ");
                    }
                    
                    // 4: Recolección total de adjuntos para el Log (Fix de la columna vacía)
                    const todosLosAdjuntos = [];
                    Object.values(colaAdjuntos).forEach(files => {
                        files.forEach(f => todosLosAdjuntos.push(f.name));
                    });
                    archivosNuevas.forEach(f => todosLosAdjuntos.push(f.name));

                // F. Registro y Envío de PDF
                const payload = {
                    tipo_formulario: "obras",
                    fase: window.EIEL_CONFIG.fase,
                    id_envio: idBatch,
                    datos_obras_json: JSON.stringify(estados),
                    observaciones: obsFinal,
                    nombre_contacto: nombreContacto,
                    departamento_contacto: departamentoVal,
                    email_contacto: emailContacto,
                    municipio_codigo: window.EIEL_CONFIG.muniCode,
                    municipio_nombre: window.EIEL_CONFIG.muniName,
                    timestamp_envio: new Date().toISOString(),
                    archivos_adjuntos: todosLosAdjuntos.join("\n")
                };
                   
                try {
                    await fetch(window.EIEL_CONFIG.urlGenerarPdf, {
                        method: "POST",
                        mode: "no-cors",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(payload)
                    });

                    // G. Finalización y Limpieza
                    UIProgress.complete();
                    if(mensajeDiv) mensajeDiv.style.display = 'none';

                    // 1. Limpieza de variables de archivos
                    colaAdjuntos = {};
                    archivosNuevas = [];

                    // 2. Limpieza VISUAL de listas y campos
                    document.querySelectorAll("[id^='lista_adjuntos_']").forEach(div => div.innerHTML = "");
                    renderArchivosNuevas();
                    
                    document.querySelectorAll("input, select, textarea").forEach(el => { 
                        if(!['button', 'submit', 'checkbox'].includes(el.type)) el.value = '';
                        if(el.tagName === 'SELECT') el.selectedIndex = 0;
                    });

                    if(checkConformidad) checkConformidad.checked = false;
                    
                    // Nota: toggleFormFreeze(false) no se llama aquí porque el diseño 
                    // limpia el formulario y lo deja listo para un nuevo uso o salida.
                    // Forzamos el estado visual del botón enviar por seguridad:
                    btnEnviar.disabled = true;
                    btnEnviar.style.opacity = "0.6";
                    btnEnviar.style.cursor = "not-allowed";

                } catch (error) {
                    console.error(error);
                    mostrarMensaje(`❌ Error técnico: ${error.message}`, "error");
                    // En caso de error técnico, re-habilitamos el formulario para permitir corrección
                    toggleFormFreeze(false);
                }
            });
        }
});
</script>
