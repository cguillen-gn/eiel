{% extends "base.html.j2" %}

{% block title %}Inventario de Obras{% endblock %}
{% block header_icon %}🏗️{% endblock %}
{% block header_title %}Formulario de Obras{% endblock %}

{% block content %}

<div class="card">
    <div class="info-text" style="background-color: #e0f2fe; color: #0369a1; padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem; border-left: 4px solid #0284c7;">
        <strong>Instrucciones:</strong> Actualice el estado de las obras listadas. Si la obra está en ejecución o finalizada, puede adjuntar la documentación pertinente (Certificaciones, Actas, Fotos) pulsando el botón "Adjuntar" en la fila correspondiente.
    </div>

    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; min-width: 600px;">
            <thead>
                <tr style="background: #f8fafc; border-bottom: 2px solid var(--border);">
                    <th style="padding: 12px; text-align: left;">Código</th>
                    <th style="padding: 12px; text-align: left;">Denominación</th>
                    <th style="padding: 12px; text-align: left;">Plan</th>
                    <th style="padding: 12px; text-align: center;">Estado</th>
                    <th style="padding: 12px; text-align: center;">Documentación</th>
                </tr>
            </thead>
            <tbody>
                {% for o in obras %}
                {% set codigo_obra = o.clave ~ o.mun ~ o.orden %}
                <tr style="border-bottom: 1px solid var(--border);">
                    <td style="padding: 12px; font-weight: 600;">{{ codigo_obra }}</td>
                    <td style="padding: 12px;">{{ o.nombre }}</td>
                    <td style="padding: 12px; color: var(--text-secondary); font-size: 0.9rem;">{{ o.plan_obra }}</td>

                    <td style="padding: 12px; text-align: center;">
                        {% if o.cond == 1 %}
                            <select class="form-select select-estado" data-obra-id="{{ codigo_obra }}" data-nombre="{{ o.nombre }}" data-plan="{{ o.plan_obra }}">
                                <option value="">-- Seleccione --</option>
                                <option value="No iniciada">No iniciada</option>
                                <option value="En ejecución">En ejecución</option>
                                <option value="Paralizada">Paralizada</option>
                                <option value="Finalizada">Finalizada</option>
                                <option value="Anulada">Anulada</option>
                            </select>
                        {% elif o.cond == 2 %}
                            <span class="badge" style="background: #dcfce7; color: #166534; padding: 4px 8px; border-radius: 4px; font-size: 0.85rem;">Finalizada (Pendiente Proyecto)</span>
                            <input type="hidden" class="select-estado" data-obra-id="{{ codigo_obra }}" data-nombre="{{ o.nombre }}" data-plan="{{ o.plan_obra }}" value="Finalizada">
                        {% else %}
                            -
                        {% endif %}
                    </td>

                    <td style="padding: 12px; text-align: center;">
                        {% if o.cond in [1,2] %}
                            <button type="button" class="btn btn-secondary" style="font-size: 0.9rem; padding: 0.4rem 0.8rem;" 
                                onclick="gestionarAdjuntos('{{ codigo_obra }}')">
                                📎 Adjuntar
                            </button>
                            <div id="lista_adjuntos_{{ codigo_obra }}" style="margin-top: 5px; text-align: left; font-size: 0.8rem;"></div>
                        {% else %}
                            <span style="color: #cbd5e1;">-</span>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="card">
    <button id="firmarBtn" class="btn btn-primary">
        <span>✓</span> Firmar y enviar formulario
    </button>
    <div id="mensaje" class="message"></div>
</div>

<input type="file" id="hiddenFileInput" multiple style="display: none;">

{% endblock %}

{% block scripts %}
<script>
    // ==========================================
    // ESTADO LOCAL
    // ==========================================
    // Almacena los nombres de archivos subidos por obra para el PDF
    // Estructura: { "03001OBRA1": ["foto1.jpg", "plano.pdf"] }
    const adjuntosPorObra = {};
    let obraActualEnSubida = null;

    // ==========================================
    // GESTIÓN DE ADJUNTOS
    // ==========================================
    const hiddenInput = document.getElementById("hiddenFileInput");

    // 1. Click en botón "Adjuntar" -> Abre selector de archivos
    window.gestionarAdjuntos = (codigoObra) => {
        obraActualEnSubida = codigoObra;
        hiddenInput.click(); // Dispara el input oculto
    };

    // 2. Cuando el usuario selecciona archivos
    hiddenInput.onchange = async () => {
        const files = Array.from(hiddenInput.files);
        if (!files.length || !obraActualEnSubida) return;

        const contenedor = document.getElementById(`lista_adjuntos_${obraActualEnSubida}`);
        
        // Inicializar array si no existe
        if (!adjuntosPorObra[obraActualEnSubida]) {
            adjuntosPorObra[obraActualEnSubida] = [];
        }

        // 3. Procesar subida uno a uno
        for (const file of files) {
            // Feedback visual inmediato (Spinning)
            const tempId = Date.now();
            const loadingItem = document.createElement("div");
            loadingItem.id = `loading_${tempId}`;
            loadingItem.innerHTML = `⏳ Subiendo ${file.name}...`;
            loadingItem.style.color = "var(--primary)";
            contenedor.appendChild(loadingItem);

            // LLAMADA AL SERVICIO CENTRALIZADO
            // Pasamos 'obra' como tipo y el codigoObra específico
            const success = await UploadService.uploadFile(
                file, 
                'obra', 
                window.EIEL_CONFIG.muniCode, 
                obraActualEnSubida
            );

            // Quitar mensaje de carga
            loadingItem.remove();

            if (success) {
                // Añadir a la lista visual y lógica
                adjuntosPorObra[obraActualEnSubida].push(file.name);
                
                const item = document.createElement("div");
                item.style.color = "var(--success)";
                item.innerHTML = `✅ ${file.name}`;
                contenedor.appendChild(item);
            } else {
                const errorItem = document.createElement("div");
                errorItem.style.color = "var(--danger)";
                errorItem.innerHTML = `❌ Error: ${file.name}`;
                contenedor.appendChild(errorItem);
            }
        }

        // Limpiar input para permitir seleccionar el mismo archivo de nuevo si fuera necesario
        hiddenInput.value = "";
        obraActualEnSubida = null;
    };

    // ==========================================
    // ENVÍO DEL FORMULARIO
    // ==========================================
    const btnFirmar = document.getElementById("firmarBtn");
    const mensajeDiv = document.getElementById("mensaje");

    function mostrarMensaje(texto, tipo) {
        mensajeDiv.textContent = texto;
        mensajeDiv.className = `message ${tipo}`;
        mensajeDiv.style.display = 'block';
    }

    btnFirmar.addEventListener("click", async () => {
        btnFirmar.disabled = true;
        mostrarMensaje("⏳ Recopilando datos...", "info");

        // 1. Recopilar datos de la tabla
        const filas = document.querySelectorAll(".select-estado");
        const estados = [];

        filas.forEach(select => {
            const estado = select.value || select.getAttribute("value"); // Para inputs hidden o selects
            
            // Solo enviamos si se ha seleccionado un estado o si es una obra finalizada obligatoria
            if (estado && estado !== "-- Seleccione --") {
                const obraId = select.dataset.obraId;
                const archivosSubidos = adjuntosPorObra[obraId] || [];

                estados.push({
                    obra: obraId,
                    nombre: select.dataset.nombre,
                    plan: select.dataset.plan,
                    estado: estado,
                    archivos: archivosSubidos.join("; ") // Cadena para el PDF
                });
            }
        });

        if (estados.length === 0) {
            mostrarMensaje("⚠️ No ha actualizado el estado de ninguna obra.", "warning");
            btnFirmar.disabled = false;
            return;
        }

        // 2. Preparar Payload
        const userEmail = localStorage.getItem("userEmailActual");
        const payload = {
            tipo_formulario: "obras",
            datos_obras_json: JSON.stringify(estados),
            email_usuario: userEmail,
            municipio_codigo: window.EIEL_CONFIG.muniCode,
            municipio_nombre: window.EIEL_CONFIG.muniName,
            timestamp_envio: new Date().toISOString()
        };

        // 3. Enviar a generar PDF
        try {
            mostrarMensaje("⏳ Generando justificante...", "info");
            
            const response = await fetch(window.EIEL_CONFIG.urlGenerarPdf, {
                method: "POST",
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body: new URLSearchParams(payload)
            });

            let result = {};
            // Manejo robusto de respuesta (igual que en Cementerios)
            try {
                result = await response.json();
            } catch(e) {
                if (response.ok) result = { success: true }; 
                else throw new Error("Error de respuesta del servidor");
            }

            if (result.success || response.ok) {
                mostrarMensaje(`✅ Estados actualizados. Justificante enviado a ${userEmail}`, "success");
            } else {
                throw new Error(result.message || "Error desconocido");
            }

        } catch (error) {
            console.error(error);
            mostrarMensaje(`❌ Error: ${error.message}`, "error");
            btnFirmar.disabled = false;
        }
    });
</script>
{% endblock %}