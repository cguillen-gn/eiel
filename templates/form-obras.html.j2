{% extends "base.html.j2" %}

{% block title %}Inventario de Obras{% endblock %}
{% block header_icon %}🏗️{% endblock %}
{% block header_title %}Formulario de Obras{% endblock %}

{% block content %}

<div class="card">
    <div class="info-text" style="background-color: #fff7ed; color: #9a3412; padding: 1rem; border-radius: 8px; margin-bottom: 0; border-left: 4px solid #f97316;">
        <strong>Instrucciones:</strong> Actualice el estado de las obras.
        Si la obra está en ejecución o finalizada, pulse "Adjuntar" para subir certificaciones o fotos.
    </div>
</div>

<div class="card">
    <div class="table-wrapper">
        <table class="data-table" style="font-size: 0.85rem;">
            <thead>
                <tr>
                    <th style="width: 8%; text-align: center;">Id</th>
                    <th style="width: 57%;">Denominación</th>
                    <th style="width: 20%; text-align: center;">Estado</th>
                    <th style="width: 15%; text-align: center;">Docs</th>
                </tr>
            </thead>
            <tbody>
                {% for o in obras %}
                {% set codigo_obra = o.clave ~ o.mun ~ o.orden %}
                <tr>
                    <td style="font-weight: 700; color: var(--primary); vertical-align: middle; text-align: center;">
                        {{ codigo_obra[-3:] }}
                    </td>

                    <td style="vertical-align: middle;">
                        <div style="font-weight: 600; color: #1e293b; margin-bottom: 4px; line-height: 1.3;">
                            {{ o.nombre }}
                        </div>
                        <div style="color: #64748b; font-size: 0.75rem; margin-top: 2px;">
                            <span style="font-weight: 700; font-size: 0.7rem; opacity: 0.7;">PLAN:</span> {{ o.plan_obra }}
                        </div>
                    </td>

                    <td style="text-align: center; vertical-align: middle;">
                        {% if o.cond == 1 %}
                            <select class="form-select select-estado" 
                                    style="padding: 6px; font-size: 0.85rem;"
                                    data-obra-id="{{ codigo_obra }}" 
                                    data-nombre="{{ o.nombre }}" 
                                    data-plan="{{ o.plan_obra }}">
                                <option value="">-- Estado --</option>
                                <option value="No iniciada">No iniciada</option>
                                <option value="En ejecución">En ejecución</option>
                                <option value="Paralizada">Paralizada</option>
                                <option value="Finalizada">Finalizada</option>
                                <option value="Anulada">Anulada</option>
                            </select>
                        {% elif o.cond == 2 %}
                            <span class="badge" style="background: #dcfce7; color: #166534; padding: 4px 6px; border-radius: 4px; font-size: 0.75rem; display: inline-block; border: 1px solid #bbf7d0;">
                                ✅ Finalizada
                            </span>
                            <input type="hidden" class="select-estado" data-obra-id="{{ codigo_obra }}" data-nombre="{{ o.nombre }}" data-plan="{{ o.plan_obra }}" value="Finalizada">
                        {% else %}
                            <span style="color: #cbd5e1;">-</span>
                        {% endif %}
                    </td>

                    <td style="text-align: center; vertical-align: middle;">
                        {% if o.cond in [1,2] %}
                            <button type="button" class="btn btn-secondary" 
                                style="font-size: 0.75rem; padding: 0.4rem 0.8rem; border: 1px solid #cbd5e1; background: #f8fafc; color: #475569;" 
                                onclick="gestionarAdjuntos('{{ codigo_obra }}')">
                                📎 Adjuntar
                            </button>
                            <div id="lista_adjuntos_{{ codigo_obra }}" style="margin-top: 5px; text-align: center; font-size: 0.7rem; color: var(--success);"></div>
                        {% else %}
                            <span style="color: #cbd5e1;">-</span>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="card">
    <h2 class="section-title" style="color: var(--theme-obras);">📝 Observaciones</h2>
    <div class="form-group">
        <label for="observaciones" class="form-label">Comentarios adicionales:</label>
        <textarea id="observaciones" class="form-input" rows="4" placeholder="Indique aquí cualquier incidencia o comentario sobre las obras..."></textarea>
    </div>
</div>

<div class="card">
    <button id="firmarBtn" class="btn btn-primary btn-obras">
        <span>✓</span> Firmar y enviar formulario
    </button>
    <div id="mensaje" class="message"></div>
</div>

<input type="file" id="hiddenFileInput" multiple style="display: none;">

{% endblock %}

{% block scripts %}
<script>
    // 1. CONFIGURACIÓN DEL HEADER
    document.querySelector('.site-header').classList.add('header-obras');

    // 2. CONFIGURACIÓN
    window.EIEL_CONFIG = {
        muniCode: "{{ muni_code }}",
        muniName: "{{ muni_display }}",
        urlGenerarPdf: "{{ url_generar_pdf }}",
        urlAdjuntos: "{{ url_adjuntos }}"
    };

    // 3. SERVICIO DE SUBIDA
    const UploadService = {
        toBase64: file => new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => resolve(reader.result.split(',')[1]);
            reader.onerror = error => reject(error);
        }),

        async uploadFile(file, tipoFicha, muniCode, codigoObra = null) {
            try {
                const base64 = await this.toBase64(file);
                const userEmail = localStorage.getItem("userEmailActual") || "anonimo";

                const payload = {
                    filename: file.name,
                    mimeType: file.type,
                    bytesBase64: base64, 
                    municipio: muniCode,
                    usuario: userEmail,
                    tipo: tipoFicha,
                    obra: codigoObra 
                };

                await fetch(window.EIEL_CONFIG.urlAdjuntos, {
                    method: 'POST',
                    mode: 'no-cors',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                return true;
            } catch (e) {
                console.error("Error subiendo archivo:", e);
                return false;
            }
        }
    };

    // 4. ESTADO LOCAL DE ADJUNTOS
    const adjuntosPorObra = {};
    let obraActualEnSubida = null;

    // 5. GESTIÓN DE ADJUNTOS
    const hiddenInput = document.getElementById("hiddenFileInput");

    window.gestionarAdjuntos = (codigoObra) => {
        obraActualEnSubida = codigoObra;
        hiddenInput.click();
    };

    hiddenInput.onchange = async () => {
        const files = Array.from(hiddenInput.files);
        if (!files.length || !obraActualEnSubida) return;

        const contenedor = document.getElementById(`lista_adjuntos_${obraActualEnSubida}`);
        if (!adjuntosPorObra[obraActualEnSubida]) {
            adjuntosPorObra[obraActualEnSubida] = [];
        }

        for (const file of files) {
            const tempId = Date.now();
            const loadingItem = document.createElement("div");
            loadingItem.id = `loading_${tempId}`;
            loadingItem.innerHTML = `⏳...`;
            loadingItem.style.fontSize = "0.7rem";
            contenedor.appendChild(loadingItem);

            const success = await UploadService.uploadFile(
                file, 
                'obra', 
                window.EIEL_CONFIG.muniCode, 
                obraActualEnSubida
            );

            loadingItem.remove();

            if (success) {
                adjuntosPorObra[obraActualEnSubida].push(file.name);
                const item = document.createElement("div");
                item.style.color = "var(--success)";
                item.style.fontSize = "0.75rem";
                // Mostramos nombre corto
                const shortName = file.name.length > 15 ? file.name.substring(0, 12) + "..." : file.name;
                item.innerHTML = `✅ ${shortName}`;
                contenedor.appendChild(item);
            } else {
                const errorItem = document.createElement("div");
                errorItem.style.color = "var(--danger)";
                errorItem.innerHTML = `❌ Error`;
                contenedor.appendChild(errorItem);
            }
        }
        hiddenInput.value = "";
        obraActualEnSubida = null;
    };

    // 6. ENVÍO DEL FORMULARIO
    const btnFirmar = document.getElementById("firmarBtn");
    const mensajeDiv = document.getElementById("mensaje");

    function mostrarMensaje(texto, tipo) {
        mensajeDiv.textContent = texto;
        mensajeDiv.className = `message ${tipo}`;
        mensajeDiv.style.display = 'block';
    }

    btnFirmar.addEventListener("click", async () => {
        btnFirmar.disabled = true;
        mostrarMensaje("⏳ Recopilando datos...", "info");

        // A) Recopilar datos de la tabla
        const filas = document.querySelectorAll(".select-estado");
        const estados = [];

        filas.forEach(select => {
            const estado = select.value || select.getAttribute("value");
            // Solo enviamos si se ha seleccionado algo o si es una obra finalizada 'hardcoded'
            if (estado && estado !== "") {
                const obraId = select.dataset.obraId;
                const archivosSubidos = adjuntosPorObra[obraId] || [];

                estados.push({
                    obra: obraId,
                    nombre: select.dataset.nombre,
                    plan: select.dataset.plan,
                    estado: estado,
                    archivos: archivosSubidos.join(";")
                });
            }
        });

        if (estados.length === 0) {
            mostrarMensaje("⚠️ No ha actualizado el estado de ninguna obra.", "warning");
            btnFirmar.disabled = false;
            return;
        }

        // B) Preparar Payload
        const userEmail = localStorage.getItem("userEmailActual");
        const payload = {
            tipo_formulario: "obras",
            datos_obras_json: JSON.stringify(estados),
            email_usuario: userEmail,
            municipio_codigo: window.EIEL_CONFIG.muniCode,
            municipio_nombre: window.EIEL_CONFIG.muniName,
            timestamp_envio: new Date().toISOString(),
            observaciones: document.getElementById("observaciones").value || ""
        };

        // C) Enviar
        try {
            mostrarMensaje("⏳ Generando justificante...", "info");
            
            const response = await fetch(window.EIEL_CONFIG.urlGenerarPdf, {
                method: "POST",
                body: new URLSearchParams(payload)
            });

            let result = {};
            try { result = await response.json(); } 
            catch(e) { if (response.ok) result = { success: true }; }

            if (result.success || response.ok) {
                mostrarMensaje(`✅ Estados actualizados. Justificante enviado a ${userEmail}`, "success");
                if(result.downloadUrl) window.open(result.downloadUrl, '_blank');
            } else {
                throw new Error(result.message || "Error desconocido");
            }

        } catch (error) {
            console.error(error);
            mostrarMensaje(`❌ Error: ${error.message}`, "error");
            btnFirmar.disabled = false;
        }
    });
</script>
{% endblock %}