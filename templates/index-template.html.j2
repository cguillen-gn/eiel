<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title id="pageTitle">EIEL {{ fase_actual }}</title>
<link rel="stylesheet" href="css/style.css"> 
<script src="https://cdn.tailwindcss.com"></script>

<style>
/* Reset */
html, body { height: 100%; margin: 0; padding: 0; background-color: #f1f5f9; font-family: 'Inter', system-ui, sans-serif; }
body { display: flex; align-items: center; justify-content: center; }

/* CARD PRINCIPAL */
.panel { 
    background: white; 
    border-radius: 16px; 
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    text-align: center; 
    max-width: 420px; 
    width: 90%; 
    overflow: hidden; 
    position: relative;
    min-height: 400px; /* Evita saltos de altura */
}

/* CABECERA */
.panel-header { background-color: var(--primary); padding: 2rem 1rem; color: white; }
.panel-header h1 { margin: 0; font-size: 1.8rem; font-weight: 700; }
.panel-header p { color: rgba(255, 255, 255, 0.9); font-size: 0.9rem; margin-top: 0.5rem; }

/* VISTAS */
.view-section { padding: 2rem; animation: fadeIn 0.3s ease-in-out; }
@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

/* LOGIN */
.login-form input { width: 100%; padding: 0.8rem; margin-bottom: 1rem; border: 1px solid #cbd5e1; border-radius: 8px; font-size: 1rem; }
.login-form input:focus { outline: none; border-color: var(--primary); box-shadow: 0 0 0 3px rgba(0, 128, 173, 0.1); }

.btn-submit {
    width: 100%; padding: 0.9rem; background-color: var(--primary); color: white; 
    font-weight: 600; border-radius: 8px; border: none; cursor: pointer; transition: background 0.2s;
}
.btn-submit:hover { background-color: var(--primary-hover); }
.btn-submit:disabled { background-color: #94a3b8; cursor: not-allowed; }

/* MENU */
.muni-info { padding-bottom: 1.5rem; border-bottom: 1px solid #e2e8f0; margin-bottom: 1.5rem; }
.muni-name { font-size: 1.4rem; font-weight: 700; color: #1e293b; display: block; }
.user-email-display { font-size: 0.9rem; color: #64748b; display: block; }

.btn-grid { display: flex; flex-direction: column; gap: 0.8rem; }
.btn-base { 
    display: flex; align-items: center; padding: 1rem; font-weight: 600; 
    border-radius: 8px; text-decoration: none; color: #334155; 
    background-color: white; border: 1px solid #e2e8f0; border-left-width: 6px; 
    transition: all 0.2s; text-align: left; box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}
.btn-base:hover { transform: translateX(4px); background-color: #f8fafc; }
.btn-icon { font-size: 1.2rem; margin-right: 12px; }

/* Temas */
.btn-agua { border-left-color: var(--theme-agua); }
.btn-obras { border-left-color: var(--theme-obras); }
.btn-residuos { border-left-color: var(--theme-residuos); }
.btn-cementerios { border-left-color: var(--theme-cementerios); }

.btn-logout-text { background: none; border: none; color: #94a3b8; text-decoration: underline; cursor: pointer; margin-top: 1.5rem; font-size: 0.85rem; }
.hidden { display: none !important; }
.error-msg { color: #ef4444; font-size: 0.9rem; margin-top: 1rem; font-weight: 500; min-height: 1.5em;}
</style>
</head>
<body>

<div class="panel">
    <div class="panel-header">
        <h1>EIEL {{ fase_actual }}</h1>
        <p id="headerStatus">Bienvenido</p>
    </div>

    <div id="view-login" class="view-section">
        <div class="login-form">
            <input type="email" id="email" placeholder="Correo electrónico" autocomplete="email">
            <input type="password" id="password" placeholder="Contraseña" autocomplete="current-password">
            <button id="btnLogin" class="btn-submit">Iniciar Sesión</button>
        </div>
        <p id="loginError" class="error-msg"></p>
    </div>

    <div id="view-menu" class="view-section hidden">
        <div class="muni-info">
            <span class="muni-name" id="muniNamePlaceholder">...</span>
            <span class="user-email-display" id="userEmailPlaceholder">...</span>
        </div>

        <div class="btn-grid">
            <a id="linkAgua" href="#" class="btn-base btn-agua"><span class="btn-icon">💧</span> Agua</a>
            <a id="linkObras" href="#" class="btn-base btn-obras"><span class="btn-icon">🏗️</span> Obras</a>
            <a id="linkResiduos" href="#" class="btn-base btn-residuos"><span class="btn-icon">♻️</span> Residuos</a>
            <a id="linkCementerios" href="#" class="btn-base btn-cementerios"><span class="btn-icon">⚰️</span> Cementerios</a>
        </div>
        
        <button id="btnLogout" class="btn-logout-text">Cerrar Sesión</button>
    </div>
    
    <div id="globalLoader" class="hidden" style="position: absolute; top:0; left:0; width:100%; height:100%; background:rgba(255,255,255,0.8); display:flex; align-items:center; justify-content:center;">
        <div style="border: 3px solid #f3f3f3; border-top: 3px solid var(--primary); border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite;"></div>
    </div>
</div>

<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-app.js";
    import { getAuth, signOut, onAuthStateChanged, signInWithEmailAndPassword } 
      from "https://www.gstatic.com/firebasejs/9.22.0/firebase-auth.js";

    // 1. DATA
    const FIREBASE_CONFIG = {{ firebase_config_data | safe }}; 
    const MUNICIPIOS_DATA = {{ municipios_json_data | safe }}; 
    const AUTH_MAP = {{ mapeo_email_codigo_data | safe }}; 
    
    // 2. INIT
    const app = initializeApp(FIREBASE_CONFIG);
    const auth = getAuth(app);
    
    // 3. UI
    const ui = {
        views: { login: document.getElementById('view-login'), menu: document.getElementById('view-menu') },
        inputs: { email: document.getElementById('email'), pass: document.getElementById('password') },
        btns: { login: document.getElementById('btnLogin'), logout: document.getElementById('btnLogout') },
        txt: { 
            header: document.getElementById('headerStatus'),
            error: document.getElementById('loginError'),
            muni: document.getElementById('muniNamePlaceholder'),
            user: document.getElementById('userEmailPlaceholder')
        },
        links: {
            agua: document.getElementById("linkAgua"),
            obras: document.getElementById("linkObras"),
            residuos: document.getElementById("linkResiduos"),
            cementerios: document.getElementById("linkCementerios")
        },
        loader: document.getElementById('globalLoader')
    };

    // --- LOGIC ---

    const showView = (viewName) => {
        ui.loader.classList.add('hidden');
        if (viewName === 'menu') {
            ui.views.login.classList.add('hidden');
            ui.views.menu.classList.remove('hidden');
            ui.txt.header.textContent = "Panel de Gestión";
        } else {
            ui.views.menu.classList.add('hidden');
            ui.views.login.classList.remove('hidden');
            ui.txt.header.textContent = "Bienvenido";
            ui.inputs.pass.value = '';
        }
    };

    const validateUser = (user) => {
        const cleanEmail = user.email.trim().toLowerCase();
        const userB64 = btoa(cleanEmail);
        const muniCode = AUTH_MAP[userB64];

        if (!muniCode) {
            console.warn("⛔ No autorizado:", cleanEmail);
            return null;
        }
        return muniCode; 
    };

    const setupMenu = (user, muniCode) => {
        const normalizedCode = String(muniCode).padStart(3, '0');
        const muniObj = MUNICIPIOS_DATA.find(m => String(m.code).padStart(3,'0') === normalizedCode);
        const muniName = muniObj ? muniObj.name : `Municipio ${normalizedCode}`;

        localStorage.setItem("userEmailActual", user.email);
        localStorage.setItem("municipioCodigoActual", normalizedCode);

        ui.txt.user.textContent = user.email;
        ui.txt.muni.textContent = muniName;
        document.title = `EIEL - ${muniName}`;

        ui.links.agua.href = `agua_${normalizedCode}.html`;
        ui.links.obras.href = `obras_${normalizedCode}.html`;
        ui.links.residuos.href = `residuos_${normalizedCode}.html`;
        ui.links.cementerios.href = `cementerios_${normalizedCode}.html`;

        showView('menu');
    };

    // LISTENER DE SESIÓN
    onAuthStateChanged(auth, (user) => {
        if (user) {
            const muniCode = validateUser(user);
            if (muniCode) {
                setupMenu(user, muniCode);
            } else {
                ui.txt.error.innerHTML = `Usuario no autorizado.<br><small>${user.email}</small>`;
                signOut(auth);
                showView('login');
            }
        } else {
            showView('login');
        }
    });

    // LOGIN
    ui.btns.login.addEventListener('click', () => {
        const email = ui.inputs.email.value.trim();
        const pass = ui.inputs.pass.value.trim();

        if (!email || !pass) {
            ui.txt.error.textContent = "Introduce correo y contraseña";
            return;
        }

        ui.loader.classList.remove('hidden'); 
        ui.txt.error.textContent = "";

        signInWithEmailAndPassword(auth, email, pass)
            .catch((error) => {
                ui.loader.classList.add('hidden');
                console.error(error);
                if (error.code === 'auth/invalid-login-credentials' || error.code === 'auth/invalid-credential') {
                    ui.txt.error.textContent = "Credenciales incorrectas.";
                } else {
                    ui.txt.error.textContent = "Error: " + error.message;
                }
            });
    });

    // LOGOUT
    ui.btns.logout.addEventListener('click', () => {
        signOut(auth).then(() => window.location.reload());
    });

    ui.inputs.pass.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') ui.btns.login.click();
    });

</script>
</body>
</html>