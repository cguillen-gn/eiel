<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title id="pageTitle">EIEL {{ fase_actual }}</title>
<link rel="stylesheet" href="css/style.css"> 
<script src="https://cdn.tailwindcss.com"></script>

<style>
/* Reset específico para el Index */
html, body { height: 100%; margin: 0; padding: 0; background-color: #f1f5f9; font-family: 'Inter', system-ui, sans-serif; }
body { display: flex; align-items: center; justify-content: center; }

/* TARJETA PRINCIPAL (CARD) */
.panel { 
    background: white; 
    border-radius: 16px; 
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    text-align: center; 
    max-width: 420px; 
    width: 90%; 
    overflow: hidden; /* Para que la cabecera no se salga de las esquinas */
    padding-bottom: 2rem;
}

/* CABECERA AZUL (NUEVO DISEÑO) */
.panel-header {
    background-color: var(--primary); /* El nuevo #0080ad */
    padding: 2rem 1rem;
    color: white;
}

.panel-header h1 {
    margin: 0;
    font-size: 1.8rem;
    font-weight: 700;
    letter-spacing: -0.025em;
}

.panel-header p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.9rem;
    margin-top: 0.5rem;
}

/* INFO MUNICIPIO (LIMPIO) */
.muni-info { 
    padding: 1.5rem; 
    border-bottom: 1px solid #e2e8f0;
}
.muni-name { font-size: 1.4rem; font-weight: 700; color: #1e293b; display: block; margin-bottom: 0.25rem; }
.user-email-display { font-size: 0.9rem; color: #64748b; display: block; }

/* GRID DE BOTONES */
.btn-grid { 
    display: flex; 
    flex-direction: column; 
    gap: 0.8rem; 
    padding: 1.5rem 2rem;
}

/* ESTILO DE BOTÓN ELEGANTE (Línea lateral) */
.btn-base { 
    display: flex; 
    align-items: center; 
    padding: 1rem 1.2rem; 
    font-weight: 600; 
    border-radius: 8px; 
    text-decoration: none; 
    color: #334155; /* Gris oscuro texto */
    background-color: white;
    border: 1px solid #e2e8f0; /* Borde sutil */
    border-left-width: 6px; /* LA LÍNEA DE COLOR */
    transition: all 0.2s ease;
    text-align: left;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

.btn-base:hover { 
    transform: translateX(4px); /* Pequeño movimiento a la derecha */
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    background-color: #f8fafc;
}

/* Icono dentro del botón */
.btn-icon { font-size: 1.2rem; margin-right: 12px; }

/* COLORES DE LA LÍNEA LATERAL */
.btn-agua { border-left-color: var(--theme-agua); }
.btn-obras { border-left-color: var(--theme-obras); }
.btn-residuos { border-left-color: var(--theme-residuos); }
.btn-cementerios { border-left-color: var(--theme-cementerios); }

/* LOADER Y ERRORES */
.loader { 
    border: 3px solid #f3f3f3; 
    border-top: 3px solid var(--primary); 
    border-radius: 50%; 
    width: 30px; height: 30px; 
    animation: spin 1s linear infinite; 
    margin: 20px auto; 
}
@keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }

/* Logout discreto */
.btn-logout-text {
    background: none;
    border: none;
    color: #94a3b8;
    text-decoration: underline;
    text-underline-offset: 4px;
    cursor: pointer;
    font-size: 0.85rem;
    transition: color 0.2s;
}
.btn-logout-text:hover { color: #ef4444; }

.hidden { display: none; }
</style>
</head>
<body>

<div class="panel">
    <div class="panel-header">
        <h1>EIEL {{ fase_actual }}</h1>
        <p id="statusMessage">Verificando acceso...</p>
    </div>

    <div id="loadingSection" style="padding: 2rem;">
        <div class="loader" id="loader"></div>
        <p id="errorMsg" class="hidden" style="color: #ef4444; font-weight: 600; margin-top: 1rem; font-size: 0.9rem;"></p>
    </div>

    <div id="contenido-protegido" class="hidden">
        
        <div class="muni-info">
            <span class="muni-name" id="muniNamePlaceholder">...</span>
            <span class="user-email-display" id="userEmailPlaceholder">...</span>
        </div>

        <div class="btn-grid">
            <a id="linkAgua" href="#" class="btn-base btn-agua">
                <span class="btn-icon">💧</span> Abastecimiento de Agua
            </a>
            <a id="linkObras" href="#" class="btn-base btn-obras">
                <span class="btn-icon">🏗️</span> Obras y Actuaciones
            </a>
            <a id="linkResiduos" href="#" class="btn-base btn-residuos">
                <span class="btn-icon">♻️</span> Residuos y Limpieza
            </a>
            <a id="linkCementerios" href="#" class="btn-base btn-cementerios">
                <span class="btn-icon">🪦</span> Cementerios
            </a>
        </div>
        
        <button id="btnLogout" class="btn-logout-text">
            Cerrar Sesión
        </button>
    </div>
</div>

<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-app.js";
    import { getAuth, signOut, onAuthStateChanged } 
      from "https://www.gstatic.com/firebasejs/9.22.0/firebase-auth.js";

    // 1. VARIABLES PYTHON
    const FIREBASE_CONFIG = {{ firebase_config_data | safe }}; 
    const MUNICIPIOS_DATA = {{ municipios_json_data | safe }}; 
    const AUTH_HASH_MAP = {{ mapeo_email_codigo_data | safe }}; 
    
    // 2. INIT
    const app = initializeApp(FIREBASE_CONFIG);
    const auth = getAuth(app);
    
    // 3. HASHING (SEGURIDAD)
    async function hashEmail(message) {
        const msgBuffer = new TextEncoder().encode(message.trim().toLowerCase());
        const hashBuffer = await crypto.subtle.digest('SHA-256', msgBuffer);
        const hashArray = Array.from(new Uint8Array(hashBuffer));
        return hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
    }

    // 4. UI REFERENCES
    const refs = {
        muniName: document.getElementById("muniNamePlaceholder"),
        userEmail: document.getElementById("userEmailPlaceholder"),
        errorMsg: document.getElementById("errorMsg"),
        loader: document.getElementById("loader"),
        loadingSection: document.getElementById("loadingSection"),
        protectedContent: document.getElementById('contenido-protegido'),
        statusMessage: document.getElementById("statusMessage"),
        links: {
            agua: document.getElementById("linkAgua"),
            obras: document.getElementById("linkObras"),
            residuos: document.getElementById("linkResiduos"),
            cementerios: document.getElementById("linkCementerios")
        }
    };

    const redirectToLogin = (message) => {
        refs.statusMessage.textContent = "Acceso Denegado";
        refs.errorMsg.textContent = message;
        refs.errorMsg.classList.remove("hidden");
        refs.loader.classList.add("hidden"); 
        setTimeout(() => { window.location.href = "login.html"; }, 2000);
    };

    const handleAuthUser = async (user) => {
        if (!user) {
            redirectToLogin("Sesión no iniciada.");
            return;
        }

        // HASH CHECK
        const userHash = await hashEmail(user.email);
        const muniCodeRaw = AUTH_HASH_MAP[userHash];
        
        if (!muniCodeRaw) {
            redirectToLogin("Usuario no autorizado.");
            return;
        }

        const normalizedMuniCode = String(muniCodeRaw).padStart(3, '0');
        const muniObj = MUNICIPIOS_DATA.find(m => String(m.code).padStart(3,'0') === normalizedMuniCode);
        const actualMuniName = muniObj ? muniObj.name : `Municipio ${normalizedMuniCode}`;
        
        // SESSION STORAGE
        localStorage.setItem("userEmailActual", user.email); 
        localStorage.setItem("municipioCodigoActual", normalizedMuniCode);
        
        // UI UPDATE
        refs.userEmail.textContent = user.email;
        refs.muniName.textContent = actualMuniName;
        refs.statusMessage.textContent = "Seleccione un formulario:";

        // LINKS UPDATE
        refs.links.agua.href = `agua_${normalizedMuniCode}.html`;
        refs.links.obras.href = `obras_${normalizedMuniCode}.html`;
        refs.links.residuos.href = `residuos_${normalizedMuniCode}.html`;
        refs.links.cementerios.href = `cementerios_${normalizedMuniCode}.html`;

        refs.loadingSection.classList.add("hidden");
        refs.protectedContent.classList.remove("hidden");
    };

    onAuthStateChanged(auth, handleAuthUser);
    
    document.getElementById("btnLogout").addEventListener('click', () => {
        signOut(auth).then(() => { window.location.href = 'login.html'; });
    });
</script>
</body>
</html>