<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>EIEL {{ fase_actual }} - Acceso</title>
<link rel="stylesheet" href="css/style.css"> 
<script src="https://cdn.tailwindcss.com"></script>
<style>
/* --- ESTILOS GENERALES --- */
html, body { 
    height: 100%; margin: 0; background-color: #f1f5f9; font-family: 'Inter', sans-serif; 
}

/* Ajuste del Body */
body { 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    justify-content: center; 
    gap: 1.5rem;             
    min-height: 100vh; 
    padding: 20px;
}

/* --- TARJETA PRINCIPAL (Compacta) --- */
.panel { 
    background: white; border-radius: 16px; 
    box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1); 
    max-width: 450px; width: 100%; /* Un pelín más estrecha */
    overflow: hidden; position: relative;
    /* Quitamos min-height para que se ajuste al contenido */
}

/* Cabecera Azul FUSIONADA */
.panel-header { 
    background-color: var(--primary); 
    padding: 1.2rem 1rem;
    color: white; 
    text-align: center; 
    transition: all 0.3s ease;
}
.panel-header h1 { 
    margin: 0; 
    font-size: 1.6rem; 
    font-weight: 700; 
    line-height: 1.2; }

/* Subtítulo */
.header-subtitle { 
    margin: 2px 0 0 0;
    opacity: 0.85; 
    font-size: 0.85rem; 
    font-weight: 500; 
    letter-spacing: 0.5px;
}

/* Información del Municipio (Oculta al principio) */
.header-muni-info {
    display: none; 
    flex-direction: column; 
    align-items: center; 
    justify-content: center; 
    margin-top: 15px; 
    padding-top: 15px;
    border-top: 1px solid rgba(255,255,255,0.15);
    animation: fadeIn 0.8s;
}
.header-badge {
    padding: 2px 8px; 
    border-radius: 4px; 
    font-weight: 700; 
    font-size: 0.85rem;
}
.header-muni-name {
    font-size: 0.9rem; 
    font-weight: 700;
    color: white;
    line-height: 1.2;
    margin-bottom: 4px; 
}

.header-code-label {
    font-family: 'Inter', sans-serif;
    font-size: 1 rem;   
    color: rgba(255, 255, 255, 0.6); 
    font-weight: 400;        
    letter-spacing: 0.5px;
}

@keyframes fadeIn { from { opacity: 0; transform: translateY(-5px); } to { opacity: 1; transform: translateY(0); } }

/* --- SECCIONES --- */
.form-section { padding: 1.5rem; /* Reducido de 2rem */ }

/* LOGIN */
label { display: block; font-weight: 600; margin-bottom: 0.4rem; color: #334155; font-size: 0.9rem; }
.input-field { 
    width: 100%; padding: 0.8rem; border: 1px solid #cbd5e1;
    border-radius: 8px; font-size: 1rem; margin-bottom: 1.2rem; background: white;
}
.btn-entrar {
    width: 100%; padding: 0.9rem; background-color: var(--primary); color: white; 
    font-weight: 700; border-radius: 8px; border: none; cursor: pointer; font-size: 1rem;
    transition: background 0.2s;
}
.btn-entrar:hover { background-color: var(--primary-hover); }

/* --- MENÚ COMPACTO --- */
/* Eliminamos .menu-header porque ahora va arriba */

/* Rejilla de Botones más apretada */
.btn-grid { display: flex; flex-direction: column; gap: 0.5rem; /* Antes 0.8rem */ }

.btn-menu { 
    display: flex; align-items: center; 
    padding: 0.8rem 1rem; /* Antes 1.2rem */
    font-weight: 600; font-size: 0.95rem; /* Letra un pelín más pequeña */
    border-radius: 8px; text-decoration: none; color: #334155;
    background-color: white; border: 1px solid #e2e8f0; border-left-width: 5px; 
    transition: all 0.2s; box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}
.btn-menu:hover { transform: translateX(3px); background-color: #f8fafc; }

/* Iconos de los botones */
.btn-icon { font-size: 1.1rem; margin-right: 10px; width: 24px; text-align: center; }

/* Colores */
.b-agua { border-left-color: var(--theme-agua); }
.b-obras { border-left-color: var(--theme-obras); }
.b-residuos { border-left-color: var(--theme-residuos); }
.b-cementerios { border-left-color: var(--theme-cementerios); }
.b-alumbrado { border-left-color: var(--theme-alumbrado, #d97706); }
.b-viario { border-left-color: var(--theme-viario, #be123c); }
.b-saneamiento { border-left-color: var(--theme-saneamiento, #7e22ce); }

.badge-alert {
    margin-left: auto; background: #fee2e2; color: #991b1b;
    font-size: 0.65rem; padding: 2px 6px; border-radius: 4px;
    font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px;
}

.error-msg { color: #ef4444; text-align: center; margin-top: 1rem; font-weight: 600; display: none; font-size: 0.9rem;}
.hidden { display: none !important; }

/* --- FOOTER COMPACTO --- */
.login-footer { text-align: center; color: #64748b; width: 100%; max-width: 450px; }
.login-footer p { font-size: 0.6rem; margin-bottom: 0.3rem; letter-spacing: 1px; font-weight: 600; opacity: 0.7; }
.contenedor-logos { display: flex; gap: 15px; align-items: center; justify-content: center; }
.logo-img { height: 28px; /* Más pequeños */ width: auto; filter: invert(1); opacity: 0.3; transition: all 0.3s ease; }
.logo-img:hover { opacity: 1; }
.copyright { font-size: 0.7rem !important; opacity: 0.5; margin-top: 5px; }
</style>
</head>
<body>

<div class="panel">
    <div class="panel-header" id="mainHeader">
        <h1>EIEL {{ fase_actual }}</h1>
        
        <p id="headerSubtitle" class="header-subtitle">Portal de Recogida de Datos</p>
        
        <div id="headerMuniInfo" class="header-muni-info">
            <span id="headerMuniName" class="header-muni-name">Nombre del Municipio</span>
            <span id="headerCode" class="header-code-label">000</span>
        </div>
    </div>

    <div id="viewLogin" class="form-section">
        <label>1. Municipio</label>
        <select id="muniSelect" class="input-field">
            <option value="">Seleccionar...</option>
        </select>

        <label>2. Código de Acceso</label>
        <input type="password" id="muniCode" class="input-field" placeholder="Introduzca el código facilitado">

        <button id="btnLogin" class="btn-entrar">Entrar</button>
        <p id="errorMsg" class="error-msg">Código incorrecto</p>
    </div>

    <div id="viewMenu" class="form-section hidden">
        <div class="btn-grid">
            <a id="lnkAgua" href="#" class="btn-menu b-agua">
                <span class="btn-icon">💧</span> Abastecimiento de Agua
            </a>
            <a id="lnkObras" href="#" class="btn-menu b-obras">
                <span class="btn-icon">🏗️</span> Obras y Actuaciones
            </a>
            <a id="lnkResiduos" href="#" class="btn-menu b-residuos">
                <span class="btn-icon">♻️</span> Residuos y Limpieza
            </a>
            <a id="lnkCementerios" href="#" class="btn-menu b-cementerios">
                <span class="btn-icon">🌹</span> Cementerios
            </a>

            <a id="lnkAlumbrado" href="#" class="btn-menu b-alumbrado" style="display: none;">
                <span class="btn-icon">💡</span> Alumbrado Público <span class="badge-alert">Requerido</span>
            </a>

            <a id="lnkViario" href="#" class="btn-menu b-viario" style="display: none;">
                <span class="btn-icon">🛣️</span> Viario / Pavimentación <span class="badge-alert">Requerido</span>
            </a>

            <a id="lnkSaneamiento" href="#" class="btn-menu b-saneamiento" style="display: none;">
                <span class="btn-icon">🚰</span> Saneamiento <span class="badge-alert">Requerido</span>
            </a>
        </div>

        <button onclick="logout()" style="margin-top: 1.5rem; width: 100%; color: #94a3b8; font-size: 0.9rem; background: none; border: none; cursor: pointer; text-decoration: underline;">
            Cerrar Sesión
        </button>
    </div>
</div>

<footer class="login-footer">
    <p>Gestionado por:</p>
    <div class="contenedor-logos">
        <a href="https://www.diputacionalicante.es" target="_blank"><img src="img/logo_dipu.gif" alt="Diputación" class="logo-img"></a>
        <a href="https://www.geonet.es" target="_blank"><img src="img/logo_geonet.png" alt="GeoNet" class="logo-img"></a>
    </div>
    <p class="copyright">© 2025 Web desarrollada por Geonet Territorial SAU</p>
</footer>

<script>
    // --- VARIABLES INYECTADAS POR PYTHON ---
    const MUNICIPIOS = {{ municipios_lista | safe }}; 
    const URL_LOGIN_API = "{{ url_login_api }}";
    const MUNICIPIOS_FLAGS = {{ config_flags_json | safe }}; 

    // --- UI REFERENCES ---
    const ui = {
        login: document.getElementById('viewLogin'),
        menu: document.getElementById('viewMenu'),
        select: document.getElementById('muniSelect'),
        input: document.getElementById('muniCode'),
        btn: document.getElementById('btnLogin'),
        error: document.getElementById('errorMsg'),
        
        // Header Elements
        muniInfo: document.getElementById('headerMuniInfo'),
        headerBadge: document.getElementById('headerCode'),
        headerName: document.getElementById('headerMuniName'),

        links: {
            agua: document.getElementById('lnkAgua'),
            obras: document.getElementById('lnkObras'),
            residuos: document.getElementById('lnkResiduos'),
            cementerios: document.getElementById('lnkCementerios'),
            alumbrado: document.getElementById('lnkAlumbrado'),
            viario: document.getElementById('lnkViario'),
            saneamiento: document.getElementById('lnkSaneamiento')
        }
    };

    // 1. Llenar Select
    MUNICIPIOS.forEach(m => {
        const opt = document.createElement('option');
        opt.value = m.code;
        opt.textContent = `${m.name} (${m.code})`; 
        ui.select.appendChild(opt);
    });

    // 2. Login
    ui.btn.addEventListener('click', async () => {
        const selectedCode = ui.select.value;
        const enteredPass = ui.input.value.trim();

        if(!selectedCode || !enteredPass) {
            showError("Seleccione un municipio e introduzca el código.");
            return;
        }

        ui.btn.disabled = true; ui.btn.textContent = "Verificando..."; ui.error.style.display = 'none';

        try {
            const response = await fetch(URL_LOGIN_API, {
                method: 'POST',
                headers: { "Content-Type": "text/plain" },
                body: JSON.stringify({ codigo: selectedCode, password: enteredPass })
            });
            const data = await response.json();

            if (data.valid === true) {
                const muniLocal = MUNICIPIOS.find(m => m.code === selectedCode);
                const nombreParaGuardar = muniLocal ? muniLocal.name_bonito : data.nombre;
                loginSuccess(selectedCode, nombreParaGuardar);
            } else {
                showError("Código de acceso incorrecto.");
            }
        } catch (error) {
            console.error(error); showError("Error de conexión.");
        } finally {
            ui.btn.disabled = false; ui.btn.textContent = "Entrar";
        }
    });

    // 3. Éxito Login
    function loginSuccess(code, name) {
        localStorage.setItem("eiel_session_code", code);
        localStorage.setItem("eiel_session_name", name);

        // --- ACTUALIZACIÓN DE CABECERA ---
        ui.muniInfo.style.display = 'flex';  
        
        ui.headerBadge.textContent = `(Cód. ${code})`;
        
        // Detectamos si es nombre compuesto (bilingüe) y metemos un salto de línea
        if (name.includes(" / ")) {
            ui.headerName.innerHTML = name.replace(" / ", "<br>");
        } else {
            ui.headerName.textContent = name;
        }
        
        // --- ACTUALIZACIÓN DE ENLACES ---
        ui.links.agua.href = `agua_${code}.html`;
        ui.links.obras.href = `obras_${code}.html`;
        ui.links.residuos.href = `residuos_${code}.html`;
        ui.links.cementerios.href = `cementerios_${code}.html`;

        // Enlaces Dinámicos
        const flags = MUNICIPIOS_FLAGS[code] || { alumbrado: false, viario: false, saneamiento: false };

        ui.links.alumbrado.href = `alumbrado_${code}.html`;
        ui.links.alumbrado.style.display = flags.alumbrado ? 'flex' : 'none';

        ui.links.viario.href = `viario_${code}.html`;
        ui.links.viario.style.display = flags.viario ? 'flex' : 'none';

        ui.links.saneamiento.href = `saneamiento_${code}.html`;
        ui.links.saneamiento.style.display = flags.saneamiento ? 'flex' : 'none';

        // Transición de vistas
        ui.login.classList.add('hidden');
        ui.menu.classList.remove('hidden');
        ui.error.style.display = 'none';
    }

    function checkSession() {
        const code = localStorage.getItem("eiel_session_code");
        const name = localStorage.getItem("eiel_session_name");
        if(code && name) loginSuccess(code, name);
    }

    window.logout = function() {
        localStorage.removeItem("eiel_session_code");
        localStorage.removeItem("eiel_session_name");
        window.location.reload();
    }

    function showError(msg) {
        ui.error.textContent = msg;
        ui.error.style.display = 'block';
    }

    checkSession();
</script>
</body>
</html>