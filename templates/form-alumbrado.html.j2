{% extends "base.html.j2" %}

{% block bloque_fase %}Fase {{ fase_actual }}{% endblock %}

{% block title %}Alumbrado P√∫blico{% endblock %}
{% block header_icon %}üí°{% endblock %}
{% block header_title %}Alumbrado P√∫blico{% endblock %}

{% block content %}

{# 1. TARJETA DE AVISOS (Siempre visible) #}
<div class="card" style="border-left: 4px solid #FCD34D; background-color: #FEFCE8;">
    <div style="padding: 1rem;">
        <h4 style="margin-top: 0; color: #92400E; display: flex; align-items: center; gap: 8px;">
            ‚ö†Ô∏è Requerimientos Detectados
        </h4>
        <p style="font-size: 0.9rem; color: #78350F; margin-bottom: 1rem;">
            Se ha detectado falta de informaci√≥n o incidencias en el <strong>Alumbrado P√∫blico</strong>. 
            Por favor, responda en <strong>Observaciones</strong> y adjunte la documentaci√≥n necesaria.
        </p>
        <ul style="list-style: none; padding: 0; margin: 0;">
            {% for aviso in avisos_personalizados %}
                <li style="background: white; padding: 10px; margin-bottom: 8px; border-radius: 6px; 
                           border: 1px solid {{ '#FECACA' if aviso.prioridad == 'alta' else '#FDE68A' }};
                           display: flex; align-items: flex-start; gap: 10px;">
                    <span style="font-size: 1.2rem; line-height: 1;">
                        {% if aviso.prioridad == 'alta' %}üî¥{% else %}üî∏{% endif %}
                    </span>
                    <span style="color: {{ '#991B1B' if aviso.prioridad == 'alta' else '#92400E' }}; font-weight: 500;">
                        {{ aviso.mensaje }}
                    </span>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>

{# 2. OBSERVACIONES (Obligatorio) #}
<div class="card" style="border-left: 4px solid var(--theme-alumbrado);">
    <h2 class="section-title">üìù Respuesta / Observaciones <span style="color:#ef4444; font-size:0.8em;">*</span></h2>
    <div class="form-group">
        <textarea id="observaciones" class="form-input" rows="6" placeholder="Escriba aqu√≠ su respuesta..."></textarea>
    </div>
</div>

{# 3. ADJUNTOS #}
<div class="card" style="border-left: 4px solid var(--theme-alumbrado);">
    <h2 class="section-title">Documentaci√≥n Adjunta</h2>
    <div class="file-upload-area" onclick="document.getElementById('fileInput').click()" style="border: 2px dashed #94a3b8; padding: 2rem; text-align: center; cursor: pointer; border-radius: 8px;">
        <div style="font-size: 2rem; margin-bottom: 0.5rem;">üìé</div>
        <div style="font-weight: 600;">Haga clic para adjuntar archivos</div>
        <input type="file" id="fileInput" multiple style="display: none;">
    </div>
    <div id="fileList" style="margin-top: 1rem; display: flex; flex-direction: column; gap: 0.5rem;"></div>
</div>

{# 4. CONTACTO Y ENV√çO #}
<div class="card" style="border-left: 4px solid var(--theme-alumbrado);">
    <h2 class="section-title">Datos de Contacto</h2>
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
        <div class="form-group">
            <label class="form-label">Nombre y apellidos *</label>
            <input type="text" id="contactoNombre" class="form-input" required>
        </div>
        <div class="form-group">
            <label class="form-label">Departamento</label>
            <input type="text" id="contactoDepartamento" class="form-input" required>
        </div>
        <div class="form-group">
            <label class="form-label">Email *</label>
            <input type="email" id="contactoEmail" class="form-input" required>
        </div>
        <div class="form-group">
            <label class="form-label">Confirme su Email *</label>
            <input type="email" id="contactoEmailConfirm" class="form-input" required onpaste="return false;">
        </div>
    </div>
</div>

<div class="card">
    <div style="margin-bottom: 1.5rem; padding: 1rem; background-color: #f8fafc; border: 1px solid #e2e8f0; border-radius: 8px;">
        <label style="display: flex; gap: 10px; cursor: pointer;">
            <input type="checkbox" id="checkConformidad" style="width: 20px; height: 20px;">
            <span style="font-size: 0.95rem; color: #334155;">Declaraci√≥n de veracidad.</span>
        </label>
    </div>
    <button id="btnEnviar" class="btn btn-primary" disabled style="opacity: 0.6; cursor: not-allowed; background-color: var(--theme-alumbrado);">
        üöÄ Enviar Respuesta
    </button>
    <div id="mensaje" class="message"></div>
</div>

{% endblock %}

{% block scripts %}
<script>
document.addEventListener("DOMContentLoaded", () => {

    // 1. SETUP DE ESTILOS
    const header = document.querySelector('.site-header');
    if(header) header.classList.add('header-alumbrado');

    // 2. CONFIGURACI√ìN GLOBAL
    window.EIEL_CONFIG = {
        muniCode: "{{ muni_code }}",
        muniName: "{{ muni_display }}",
        fase: "{{ fase_actual }}",
        urlGenerarPdf: "{{ url_generar_pdf }}",
        urlAdjuntos: "{{ url_adjuntos }}",
        formType: "alumbrado"
    };

    // 3. SERVICIOS
    const UploadService = {
        toBase64: file => new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => resolve(reader.result.split(',')[1]);
            reader.onerror = error => reject(error);
        }),
        async uploadFile(file, tipoFicha, muniCode, codigoObra = null) {
            try {
                const base64 = await this.toBase64(file);
                const userEmail = document.getElementById("contactoEmail").value || "anonimo";
                await fetch(window.EIEL_CONFIG.urlAdjuntos, {
                    method: 'POST', mode: 'no-cors',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        filename: file.name, mimeType: file.type, bytesBase64: base64, 
                        municipio: muniCode, usuario: userEmail, tipo: tipoFicha, obra: codigoObra
                    })
                });
                return true;
            } catch (e) { return false; }
        }
    };

    // 4. GESTI√ìN DE ARCHIVOS UI
    let archivos = [];
    const fileInput = document.getElementById("fileInput");
    const fileList = document.getElementById("fileList");

    if(fileInput) {
        fileInput.onchange = () => {
            archivos.push(...Array.from(fileInput.files));
            renderArchivos();
            fileInput.value = '';
        };
    }
    window.eliminarArchivo = (i) => {
        archivos.splice(i, 1);
        renderArchivos();
    };
    function renderArchivos() {
        if (!fileList) return;
        fileList.innerHTML = archivos.length ? archivos.map((f, i) => `
            <div style="display: flex; justify-content: space-between; align-items: center; background: #f8fafc; padding: 0.5rem; margin-top:5px; border: 1px solid #ccc; border-radius: 4px;">
                <span>üìÑ ${f.name}</span>
                <button type="button" onclick="eliminarArchivo(${i})" style="color:red; border:none; background:none; cursor:pointer;">‚úñ</button>
            </div>`).join("") : "";
    }

    // 5. ENV√çO
    const btnEnviar = document.getElementById("btnEnviar");
    const checkConformidad = document.getElementById("checkConformidad");
    const mensajeDiv = document.getElementById("mensaje");

    function mostrarMensaje(texto, tipo) {
        if(mensajeDiv) { mensajeDiv.textContent = texto; mensajeDiv.className = `message ${tipo}`; mensajeDiv.style.display = 'block'; }
    }

    if (checkConformidad && btnEnviar) {
        checkConformidad.addEventListener('change', function() {
            btnEnviar.disabled = !this.checked;
            btnEnviar.style.opacity = this.checked ? "1" : "0.6";
            btnEnviar.style.cursor = this.checked ? "pointer" : "not-allowed";
        });
    }

    if (btnEnviar) {
        btnEnviar.addEventListener("click", async () => {
            btnEnviar.disabled = true;
            btnEnviar.style.cursor = "wait";

            const nombre = document.getElementById("contactoNombre").value.trim();
            const depto = document.getElementById("contactoDepartamento").value.trim();
            const email = document.getElementById("contactoEmail").value.trim();
            const emailConf = document.getElementById("contactoEmailConfirm").value.trim();
            const obs = document.getElementById("observaciones").value.trim();

            if (!nombre || !email || !email.includes('@')) {
                mostrarMensaje("‚ö†Ô∏è Rellene el contacto.", "warning");
                btnEnviar.disabled = false; btnEnviar.style.cursor = "pointer"; return;
            }
            if (email.toLowerCase() !== emailConf.toLowerCase()) {
                mostrarMensaje("‚ö†Ô∏è Los emails no coinciden.", "error");
                btnEnviar.disabled = false; btnEnviar.style.cursor = "pointer"; return;
            }
            
            // VALIDACI√ìN ESTRICTA (Siempre obligatorio aqu√≠)
            if (obs === "") {
                mostrarMensaje("‚ö†Ô∏è Es OBLIGATORIO responder a los requerimientos en 'Observaciones'.", "error");
                document.getElementById("observaciones").style.border = "2px solid red";
                document.getElementById("observaciones").focus();
                btnEnviar.disabled = false; btnEnviar.style.cursor = "pointer"; return;
            }

            mostrarMensaje("‚è≥ Subiendo archivos...", "info");
            for (const f of archivos) {
                await UploadService.uploadFile(f, window.EIEL_CONFIG.formType, window.EIEL_CONFIG.muniCode);
            }

            const payload = {
                tipo_formulario: window.EIEL_CONFIG.formType,
                fase: window.EIEL_CONFIG.fase,
                observaciones: obs,
                nombre_contacto: nombre,
                departamento_contacto: depto,
                email_contacto: email, 
                municipio_codigo: window.EIEL_CONFIG.muniCode,
                municipio_nombre: window.EIEL_CONFIG.muniName,
                timestamp_envio: new Date().toISOString(),
                archivos_adjuntos: archivos.map(a => a.name).join("\n")
            };

            try {
                await fetch(window.EIEL_CONFIG.urlGenerarPdf, {
                    method: "POST", mode: "no-cors",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(payload)
                });
                mostrarMensaje("‚úÖ Respuesta enviada correctamente.", "success");
                
                archivos = []; renderArchivos();
                document.getElementById("observaciones").value = "";
                if(checkConformidad) {
                    checkConformidad.checked = false;
                    btnEnviar.style.opacity = "0.6";
                    btnEnviar.disabled = true;
                }
            } catch (e) {
                mostrarMensaje(`Error: ${e.message}`, "error");
                btnEnviar.disabled = false; btnEnviar.style.cursor = "pointer";
            }
        });
    }
});
</script>
{% endblock %}