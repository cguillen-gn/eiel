{% extends "base.html.j2" %}

{% block title %}Abastecimiento de agua{% endblock %}
{% block header_icon %}💧{% endblock %}
{% block header_title %}Abastecimiento de agua{% endblock %}

{% block content %}

<div class="card">
    <h2 class="section-title">Consumo Anual</h2>
    <div class="form-group">
        <label for="consumoInput" class="form-label">
            Consumo de agua potable en el año {{ fase_anterior }} (m³)
        </label>
        <input 
            type="number" 
            id="consumoInput" 
            class="form-input" 
            placeholder="Ej: 15000" 
            min="0"
            style="max-width: 300px;"
        >
    </div>
</div>

<div class="card">
    <h2 class="section-title">Depósitos Municipales</h2>
    
    {# Verificamos si hay datos JSON válidos #}
    {% if depositos_json and depositos_json != "[]" %}
    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; min-width: 400px;">
            <thead>
                <tr style="background: #f8fafc; border-bottom: 2px solid var(--border);">
                    <th style="padding: 12px; text-align: left;">Nombre del Depósito</th>
                    <th style="padding: 12px; text-align: left;">Última Limpieza (Año)</th>
                </tr>
            </thead>
            <tbody id="tablaDepositos">
                {# Convertimos el texto JSON a objeto Python #}
                {% set lista_depositos = depositos_json | fromjson %}
                
                {% for d in lista_depositos %}
                <tr style="border-bottom: 1px solid var(--border);">
                    <td style="padding: 12px; font-weight: 500;">
                        {{ d.nombre }}
                    </td>
                    <td style="padding: 12px;">
                        <input 
                            type="number" 
                            class="form-input input-limpieza" 
                            data-nombre="{{ d.nombre }}"
                            placeholder="Ej: 2024"
                            value="{{ d.limpieza }}"
                            min="1900" 
                            max="2100"
                            style="max-width: 150px;"
                        >
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
        <p style="color: var(--text-secondary); font-style: italic; padding: 1rem;">
            ℹ️ No constan depósitos registrados para este municipio.
        </p>
    {% endif %}
</div>

<div class="card">
    <h2 class="section-title">Documentación Adjunta (Opcional)</h2>
    <div class="file-upload-area" onclick="document.getElementById('fileInput').click()" style="border: 2px dashed var(--border); padding: 2rem; text-align: center; cursor: pointer; border-radius: 8px; transition: background 0.2s;">
        <div style="font-size: 2rem; margin-bottom: 0.5rem;">📎</div>
        <div style="color: var(--primary); font-weight: 600;">Haga clic para adjuntar archivos</div>
        <p style="font-size: 0.9rem; color: #666;">(Fotos, informes, análisis...)</p>
        <input type="file" id="fileInput" multiple style="display: none;">
    </div>
    <div id="fileList" style="margin-top: 1rem; display: flex; flex-direction: column; gap: 0.5rem;"></div>
</div>

<div class="card">
    <h2 class="section-title" style="color: var(--theme-agua);">📝 Observaciones</h2>
    <div class="form-group">
        <label for="observaciones" class="form-label">Comentarios adicionales:</label>
        <textarea id="observaciones" class="form-input" rows="4" placeholder="Indique aquí cualquier incidencia, aclaración o dato relevante..."></textarea>
    </div>
</div>

<div class="card">
    <button id="firmarBtn" class="btn btn-primary btn-agua"> <span>✓</span> Firmar y enviar formulario
    </button>
    <div id="mensaje" class="message"></div>
</div>

{% endblock %}

{% block scripts %}
<script>

    // ==========================================
    // 1. CAMBIAR COLOR CABECERA
    // ==========================================
    document.querySelector('.site-header').classList.add('header-agua');
    
    // ==========================================
    // 2. CONFIGURACIÓN (Inyectada desde Python/Jinja)
    // ==========================================
    // Esto asegura que el JS tenga acceso a las variables del servidor
    window.EIEL_CONFIG = {
        muniCode: "{{ muni_code }}",
        muniName: "{{ muni_display }}",
        urlGenerarPdf: "{{ url_generar_pdf }}",
        urlAdjuntos: "{{ url_adjuntos }}"
    };
    
    // ==========================================
    // 3. SERVICIO DE SUBIDA (La lógica que faltaba)
    // ==========================================
    const UploadService = {
        toBase64: file => new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => resolve(reader.result.split(',')[1]);
            reader.onerror = error => reject(error);
        }),

        async uploadFile(file, tipoFicha, muniCode) {
            try {
                const base64 = await this.toBase64(file);
                // Obtenemos email (intentamos Firebase, si no localStorage, si no Anonimo)
                const userEmail = firebase.auth().currentUser ? firebase.auth().currentUser.email : (localStorage.getItem("userEmailActual") || "anonimo");

                const payload = {
                    filename: file.name,
                    mimeType: file.type,
                    bytesBase64: base64, // Nota: Asegúrate que tu AppScript espera 'bytesBase64' o 'bytes'
                    municipio: muniCode,
                    usuario: userEmail,
                    tipo: tipoFicha
                };

                await fetch(window.EIEL_CONFIG.urlAdjuntos, {
                    method: 'POST',
                    mode: 'no-cors',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                return true;
            } catch (e) {
                console.error("Error subiendo archivo:", e);
                return false;
            }
        }
    };

    // ==========================================
    // 4. GESTIÓN DE ARCHIVOS (Tu código original)
    // ==========================================
    let archivos = [];
    const fileInput = document.getElementById("fileInput");
    const fileList = document.getElementById("fileList");

    fileInput.onchange = () => {
        archivos.push(...Array.from(fileInput.files));
        renderArchivos();
        fileInput.value = '';
    };

    window.eliminarArchivo = (i) => {
        archivos.splice(i, 1);
        renderArchivos();
    };

    function renderArchivos() {
        if (archivos.length === 0) {
            fileList.innerHTML = '';
            return;
        }
        fileList.innerHTML = archivos.map((f, i) => `
            <div style="display: flex; justify-content: space-between; align-items: center; background: #f8fafc; padding: 0.5rem 1rem; border-radius: 6px; border: 1px solid var(--border);">
                <span>📄 ${f.name}</span>
                <button type="button" onclick="eliminarArchivo(${i})" class="btn-danger" style="background:none; border:none; color:red; cursor:pointer;">✖</button>
            </div>
        `).join("");
    }

    // ==========================================
    // 5. LÓGICA DE ENVÍO
    // ==========================================
    const btnFirmar = document.getElementById("firmarBtn");
    const mensajeDiv = document.getElementById("mensaje");

    function mostrarMensaje(texto, tipo) {
        mensajeDiv.textContent = texto;
        // Asignamos colores según el tipo
        let color = "#e2e8f0"; // gris
        if(tipo === 'success') color = "#d1fae5"; // verde
        if(tipo === 'error') color = "#fee2e2"; // rojo
        if(tipo === 'warning') color = "#fef3c7"; // amarillo
        
        mensajeDiv.style.background = color;
        mensajeDiv.style.color = "#333";
        mensajeDiv.style.display = 'block';
    }

    btnFirmar.addEventListener("click", async () => {
        btnFirmar.disabled = true;
        mostrarMensaje("⏳ Subiendo archivos adjuntos a Drive...", "info");

        // A. Subir Archivos uno a uno
        let errores = 0;
        for (const file of archivos) {
            const ok = await UploadService.uploadFile(file, 'AGUA', window.EIEL_CONFIG.muniCode);
            if (!ok) errores++;
        }
        
        if (errores > 0) mostrarMensaje(`⚠️ ${errores} archivos fallaron al subir, pero seguimos enviando el PDF.`, "warning");

        // B. Recopilar Datos
        mostrarMensaje("⏳ Generando PDF y enviando email...", "info");

        const depositosData = [];
        document.querySelectorAll('.input-limpieza').forEach(input => {
            depositosData.push({
                nombre: input.dataset.nombre,
                limpieza: input.value || "No indicado"
            });
        });

        // Intentamos coger el email de Firebase o fallback
        const emailUsuario = firebase.auth().currentUser ? firebase.auth().currentUser.email : "desconocido";

        const payload = {
            consumo: document.getElementById("consumoInput").value || "No indicado",
            depositos: JSON.stringify(depositosData),
            email_usuario: emailUsuario,
            municipio_codigo: window.EIEL_CONFIG.muniCode,
            municipio_nombre: window.EIEL_CONFIG.muniName,
            tipo_ficha: "AGUA", // Importante para que el PDF sepa qué plantilla usar
            timestamp_envio: new Date().toISOString(),
            lista_archivos: archivos.map(a => a.name).join(", "),
            observaciones: document.getElementById("observaciones").value || ""
        };

        // C. Enviar a Script PDF
        try {
            // Usamos mode: 'no-cors' para AppScript
            await fetch(window.EIEL_CONFIG.urlGenerarPdf, {
                method: "POST",
                mode: "no-cors",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(payload)
            });

            // Como usamos no-cors, no podemos leer la respuesta (result.json), 
            // pero si no da error en el catch, asumimos que llegó a Google.
            mostrarMensaje("✅ ¡Éxito! Formulario enviado. Revisa tu email.", "success");
            
            // Limpieza
            archivos = [];
            renderArchivos();
            document.getElementById("consumoInput").value = "";
            
        } catch (error) {
            console.error(error);
            mostrarMensaje(`❌ Error de conexión: ${error.message}`, "error");
        } finally {
            btnFirmar.disabled = false;
            // Restaurar texto botón tras 3 segundos
            setTimeout(() => { btnFirmar.innerHTML = "<span>✓</span> Firmar y enviar formulario"; }, 3000);
        }
    });
</script>
{% endblock %}