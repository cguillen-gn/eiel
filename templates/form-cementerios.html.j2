{% extends "base.html.j2" %}

{% block title %}Cementerios{% endblock %}
{% block header_icon %}ü™¶{% endblock %}
{% block header_title %}Cementerios{% endblock %}

{% block content %}

{% set lista_cementerios = cementerios_json | fromjson %}

{% if lista_cementerios and lista_cementerios|length > 0 %}
    {% for cem in lista_cementerios %}
    <div class="card">
        <h2 class="section-title" style="color: var(--theme-cementerios);">
            {{ cem.nombre }}
        </h2>
        
        <div class="cementerio-wrapper">
            <table class="cem-table">
                <thead>
                    <tr>
                        <th rowspan="2" style="width: 150px; background: #e2e8f0; color: #333;">Unidad</th> <th rowspan="2" style="width: 100px;">Ocupadas</th>
                        <th colspan="3">Libres (Disponibles)</th>
                    </tr>
                    <tr>
                        <th>En Concesi√≥n</th>
                        <th>Propiedad</th>
                        <th>Municipal</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="label-col">Fosas</td>
                        <td><input type="number" class="cem-input" id="ocupadas_fosas_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_concesion_fosas_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_propiedad_fosas_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_municipal_fosas_{{ loop.index0 }}" placeholder="0"></td>
                    </tr>
                    <tr>
                        <td class="label-col">Nichos</td>
                        <td><input type="number" class="cem-input" id="ocupadas_nichos_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_concesion_nichos_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_propiedad_nichos_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_municipal_nichos_{{ loop.index0 }}" placeholder="0"></td>
                    </tr>
                    <tr>
                        <td class="label-col">Columbarios</td>
                        <td><input type="number" class="cem-input" id="ocupadas_columbarios_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_concesion_columbarios_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_propiedad_columbarios_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_municipal_columbarios_{{ loop.index0 }}" placeholder="0"></td>
                    </tr>
                    <tr>
                        <td class="label-col">Osarios</td>
                        <td><input type="number" class="cem-input" id="ocupadas_osarios_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_concesion_osarios_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_propiedad_osarios_{{ loop.index0 }}" placeholder="0"></td>
                        <td><input type="number" class="cem-input" id="libres_municipal_osarios_{{ loop.index0 }}" placeholder="0"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <input type="hidden" id="nombre_cem_{{ loop.index0 }}" value="{{ cem.nombre }}">
    </div>
    {% endfor %}

{% else %}
    <div class="card">
        <p style="padding: 1rem; color: var(--text-secondary);">
            ‚ÑπÔ∏è No constan cementerios registrados para este municipio.
        </p>
    </div>
{% endif %}



<div class="card">
    <h2 class="section-title" style="color: var(--theme-cementerios);">Documentaci√≥n Adjunta</h2>
    <div class="file-upload-area" onclick="document.getElementById('fileInput').click()" style="border: 2px dashed var(--border); padding: 2rem; text-align: center; cursor: pointer; border-radius: 8px;">
        <div style="font-size: 2rem; margin-bottom: 0.5rem;">üìé</div>
        <div style="color: var(--primary); font-weight: 600;">Haga clic para adjuntar archivos</div>
        <input type="file" id="fileInput" multiple style="display: none;">
    </div>
    <div id="fileList" style="margin-top: 1rem; display: flex; flex-direction: column; gap: 0.5rem;"></div>
</div>

<div class="card">
    <h2 class="section-title" style="color: var(--theme-cementerios);">üìù Observaciones</h2>
    <div class="form-group">
        <label for="observaciones" class="form-label">Comentarios adicionales:</label>
        <textarea id="observaciones" placeholder="Indique aqu√≠ cualquier incidencia sobre el estado del cementerio..."></textarea>
    </div>
</div>

<div class="card">
    <button id="firmarBtn" class="btn btn-primary btn-cementerios">
        <span>‚úì</span> Firmar y enviar formulario
    </button>
    <div id="mensaje" class="message"></div>
</div>

{% endblock %}

{% block scripts %}
<script>
    // 1. HEADER GRIS
    document.querySelector('.site-header').classList.add('header-cementerios');

    // 2. CONFIG
    window.EIEL_CONFIG = {
        muniCode: "{{ muni_code }}",
        muniName: "{{ muni_display }}",
        urlGenerarPdf: "{{ url_generar_pdf }}",
        urlAdjuntos: "{{ url_adjuntos }}",
        numCementerios: {{ lista_cementerios|length }}
    };

    // 3. UPLOAD SERVICE
    const UploadService = {
        toBase64: file => new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => resolve(reader.result.split(',')[1]);
            reader.onerror = error => reject(error);
        }),
        async uploadFile(file, tipoFicha, muniCode) {
            try {
                const base64 = await this.toBase64(file);
                const userEmail = localStorage.getItem("userEmailActual") || "anonimo";
                await fetch(window.EIEL_CONFIG.urlAdjuntos, {
                    method: 'POST', mode: 'no-cors',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        filename: file.name, mimeType: file.type, bytesBase64: base64, 
                        municipio: muniCode, usuario: userEmail, tipo: tipoFicha
                    })
                });
                return true;
            } catch (e) { return false; }
        }
    };

    // 4. ARCHIVOS UI
    let archivos = [];
    const fileInput = document.getElementById("fileInput");
    const fileList = document.getElementById("fileList");

    fileInput.onchange = () => { archivos.push(...Array.from(fileInput.files)); renderArchivos(); fileInput.value = ''; };
    window.eliminarArchivo = (i) => { archivos.splice(i, 1); renderArchivos(); };
    function renderArchivos() {
        if (!archivos.length) { fileList.innerHTML = ''; return; }
        fileList.innerHTML = archivos.map((f, i) => `
            <div style="display:flex; justify-content:space-between; background:#f8fafc; padding:0.5rem; border:1px solid #e2e8f0;">
                <span>üìÑ ${f.name}</span><button onclick="eliminarArchivo(${i})" class="btn-danger">‚úñ</button>
            </div>`).join("");
    }

    // 5. ENV√çO
    const btnFirmar = document.getElementById("firmarBtn");
    const mensajeDiv = document.getElementById("mensaje");
    function mostrarMensaje(txt, tipo) { mensajeDiv.textContent = txt; mensajeDiv.className = `message ${tipo}`; mensajeDiv.style.display = 'block'; }

    btnFirmar.addEventListener("click", async () => {
        btnFirmar.disabled = true;
        mostrarMensaje("‚è≥ Subiendo archivos...", "info");

        // Subir Adjuntos
        let errores = 0;
        for (const f of archivos) {
            if (!await UploadService.uploadFile(f, 'cementerios', window.EIEL_CONFIG.muniCode)) errores++;
        }
        if (errores > 0) mostrarMensaje(`‚ö†Ô∏è ${errores} archivos fallaron.`, "warning");

        mostrarMensaje("‚è≥ Recopilando datos...", "info");

        // RECOPILAR DATOS DE CADA CEMENTERIO
        const cementeriosData = [];
        const numCems = window.EIEL_CONFIG.numCementerios;

        for (let i = 0; i < numCems; i++) {
            const getVal = (id) => document.getElementById(id + "_" + i).value || "0";
            
            cementeriosData.push({
                nombre: document.getElementById("nombre_cem_" + i).value,
                // Fosas
                ocupadas_fosas: getVal("ocupadas_fosas"),
                libres_concesion_fosas: getVal("libres_concesion_fosas"),
                libres_propiedad_fosas: getVal("libres_propiedad_fosas"),
                libres_municipal_fosas: getVal("libres_municipal_fosas"),
                // Nichos
                ocupadas_nichos: getVal("ocupadas_nichos"),
                libres_concesion_nichos: getVal("libres_concesion_nichos"),
                libres_propiedad_nichos: getVal("libres_propiedad_nichos"),
                libres_municipal_nichos: getVal("libres_municipal_nichos"),
                // Columbarios
                ocupadas_columbarios: getVal("ocupadas_columbarios"),
                libres_concesion_columbarios: getVal("libres_concesion_columbarios"),
                libres_propiedad_columbarios: getVal("libres_propiedad_columbarios"),
                libres_municipal_columbarios: getVal("libres_municipal_columbarios"),
                // Osarios
                ocupadas_osarios: getVal("ocupadas_osarios"),
                libres_concesion_osarios: getVal("libres_concesion_osarios"),
                libres_propiedad_osarios: getVal("libres_propiedad_osarios"),
                libres_municipal_osarios: getVal("libres_municipal_osarios")
            });
        }

        const payload = {
            tipo_formulario: "cementerios",
            cementerios_data: JSON.stringify(cementeriosData),
            observaciones: document.getElementById("observaciones").value || "",
            email_usuario: localStorage.getItem("userEmailActual"),
            municipio_codigo: window.EIEL_CONFIG.muniCode,
            municipio_nombre: window.EIEL_CONFIG.muniName,
            timestamp_envio: new Date().toISOString(),
            archivos_adjuntos: archivos.map(a => a.name).join("\n")
        };

        try {
            const response = await fetch(window.EIEL_CONFIG.urlGenerarPdf, {
                method: "POST", body: new URLSearchParams(payload)
            });
            if (response.ok) {
                mostrarMensaje("‚úÖ Enviado correctamente.", "success");
                archivos = []; renderArchivos();
                // Opcional: abrir PDF si el script devuelve URL
                // const res = await response.json(); if(res.downloadUrl) window.open(res.downloadUrl);
            } else { throw new Error("Error servidor"); }
        } catch (e) {
            mostrarMensaje("‚ùå Error al enviar.", "error");
            btnFirmar.disabled = false;
        }
    });
</script>
{% endblock %}