{% extends "base.html.j2" %}

{% block bloque_fase %}
    Fase {{ fase_actual }}
{% endblock %}

{% block title %}Cementerios{% endblock %}
{% block header_icon %}🌹{%endblock %}
{% block header_title %}Cementerios{% endblock %}

{% block content %}


{# Estado Vacio #}
{% if cementerios|length == 0 %}
<div class="card" style="text-align: center; padding: 3rem;">
    <div style="font-size: 3rem; margin-bottom: 1rem;">🌹</div>
    <h3 style="color: var(--text-secondary);">No hay cementerios registrados</h3>
    <p style="color: var(--text-secondary);">Su municipio no tiene cementerios en la base de datos.</p>
</div>
{% else %}


{# --- INSTRUCCIONES --- #}
<div style="background-color: #eff6ff; border-left: 4px solid #3b82f6; padding: 1.2rem; border-radius: 4px; margin-bottom: 20px; box-shadow: 0 1px 2px rgba(0,0,0,0.05);">
    <h4 style="margin: 0 0 0.8rem 0; font-weight: 700; color: #1e40af; display: flex; align-items: center; gap: 8px;">
        ℹ️ Instrucciones
    </h4>
    <ul style="margin: 0 0 0 1.5rem; padding: 0; list-style-type: disc; color: #1e3a8a; font-size: 0.95rem; line-height: 1.5;">
        <li style="margin-bottom: 0.5rem;">
            Rellene los datos requeridos acerca de recogida de residuos y limpieza viaria. Si no dispone de algún dato, indíquelo en en apartado de <strong>Observaciones</strong>.
        </li>
    </ul>
</div>



{# --- DATOS OCUPACIÓN CEMENTERIOS --- #}
{% for cem in cementerios %}
<div class="card" style="border-left: 4px solid var(--theme-cementerios);">
    <h2 class="section-title" style="color: var(--theme-cementerios);">📍 {{ cem.nombre }}</h2>
    
    <div class="cementerio-table-wrapper">
        <table class="cementerio-table">
            <thead>
                <tr>
                    <th class="header-ocupacion" colspan="2">OCUPACIÓN</th>
                    <th>FOSAS</th>
                    <th>NICHOS</th>
                    <th>COLUMBARIOS</th>
                    <th>OSARIOS</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="label-cell">OCUPADAS</td>
                    <td class="sublabel-cell"></td> 
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="ocupadas_fosas" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="ocupadas_nichos" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="ocupadas_columbarios" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="ocupadas_osarios" placeholder="0"></td>
                </tr>

                <tr>
                    <td class="label-cell" rowspan="3">LIBRES</td> 
                    <td class="sublabel-cell">EN CONCESIÓN</td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_concesion_fosas" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_concesion_nichos" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_concesion_columbarios" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_concesion_osarios" placeholder="0"></td>
                </tr>

                <tr>
                    <td class="sublabel-cell">PROPIEDAD PRIVADA</td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_propiedad_fosas" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_propiedad_nichos" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_propiedad_columbarios" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_propiedad_osarios" placeholder="0"></td>
                </tr>

                <tr>
                    <td class="sublabel-cell">
                        PROPIEDAD MUNICIPAL<br>
                        <span style="font-size: 0.75rem;">(DISPONIBLES)</span>
                    </td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_municipal_fosas" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_municipal_nichos" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_municipal_columbarios" placeholder="0"></td>
                    <td><input type="number" min="0" data-cem="{{ loop.index }}" data-tipo="libres_municipal_osarios" placeholder="0"></td>
                </tr>

                <tr class="total-row">
                    <td class="label-cell" colspan="2">TOTAL</td> 
                    <td id="total_fosas_{{ loop.index }}">0</td>
                    <td id="total_nichos_{{ loop.index }}">0</td>
                    <td id="total_columbarios_{{ loop.index }}">0</td>
                    <td id="total_osarios_{{ loop.index }}">0</td>
                </tr>
            </tbody>
        </table>
    </div>
    </div>
{% endfor %}

{# --- REQUERIMIENTOS --- #}
{% if avisos_personalizados and avisos_personalizados|length > 0 %}
<div class="card" style="border-left: 4px solid #FCD34D; background-color: #FEFCE8;">
    <div style="padding: 1rem;">
        <h4 style="margin-top: 0; color: #92400E; display: flex; align-items: center; gap: 8px;">
            ⚠️ Otra información solicitada
        </h4>
        <p style="font-size: 0.9rem; margin-bottom: 1rem;">
            A continuación se muestra otros datos que se consideran necesarios solicitar esta fase tras analizar la información disponible del municipio. Puede contestar en el apartado de <strong>Observaciones</strong> y añadir los arhivos que procedan en el apartado de <strong>Documentación adjunta</strong>
        </p>
        
        <ul style="list-style: none; padding: 0; margin: 0;">
            {% for aviso in avisos_personalizados %}
                <li style="background: white; padding: 10px; margin-bottom: 8px; border-radius: 6px; 
                           border: 1px solid {{ '#FECACA' if aviso.prioridad == 'alta' else '#FDE68A' }};
                           display: flex; align-items: flex-start; gap: 10px;">
                    
                    {# Icono según prioridad #}
                    <span style="font-size: 1.2rem; line-height: 1;">
                        {% if aviso.prioridad == 'alta' %}🔴{% else %}🔸{% endif %}
                    </span>
                    
                    <div style="flex: 1;">
                        {# Mensaje #}
                        <span style="font-weight: 500; display: block;">
                            {{ aviso.mensaje }}
                        </span>

                        {# --- LÓGICA DE HIPERVÍNCULO (URL) --- #}
                        {% if aviso.url %}
                            <div style="margin-top: 8px;">
                                <a href="{{ aviso.url }}" target="_blank" 
                                   style="display: inline-flex; align-items: center; gap: 6px; 
                                          background-color: #f8fafc; color: #475569; 
                                          padding: 4px 12px; border-radius: 4px; font-size: 0.8rem; 
                                          text-decoration: none; border: 1px solid #cbd5e1; 
                                          font-weight: 600; transition: all 0.2s;"
                                   onmouseover="this.style.borderColor='#94a3b8'; this.style.backgroundColor='#f1f5f9';"
                                   onmouseout="this.style.borderColor='#cbd5e1'; this.style.backgroundColor='#f8fafc';">
                                    🌐 Ver en Geoportal
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endif %}

{# --- OBSERVACIONES --- #}
<div class="card" style="border-left: 4px solid var(--theme-cementerios);">
    <h2 class="section-title" style="color: var(--theme-cementerios);">📝 Observaciones</h2>
    <div class="form-group">
        <label for="observaciones" class="form-label">Comentarios adicionales:</label>
        <textarea id="observaciones" class="form-input" rows="4" placeholder="Indique aquí cualquier incidencia, aclaración o dato relevante..."></textarea>
    </div>
</div>

{# --- ADJUNTOS --- #}
<div class="card" style="border-left: 4px solid var(--theme-cementerios);">
    <h2 class="section-title" style="color: var(--theme-cementerios);">Documentación Adjunta (Opcional)</h2>
    <div class="file-upload-area" onclick="document.getElementById('fileInput').click()" style="border: 2px dashed #94a3b8; padding: 2rem; text-align: center; cursor: pointer; border-radius: 8px; transition: background 0.2s;">
        <div style="font-size: 2rem; margin-bottom: 0.5rem;">📎</div>
        <div style="font-weight: 600;">Haga clic para adjuntar archivos</div>
        <p style="font-size: 0.9rem; color: #666;">(Fotos, informes, analisis...)</p>
        <input type="file" id="fileInput" multiple style="display: none;">
    </div>
    <div id="fileList" style="margin-top: 1rem; display: flex; flex-direction: column; gap: 0.5rem;"></div>
</div>

{# --- DATOS DE CONTACTO --- #}
<div class="card" style="border-left: 4px solid var(--theme-cementerios);">
    <h2 class="section-title" style="color: var(--theme-cementerios);">👤 Datos de Contacto</h2>
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
        <div class="form-group">
            <label class="form-label">Nombre y apellidos *</label>
            <input type="text" id="contactoNombre" class="form-input" placeholder="Ej: Juan Pérez" required>
        </div>
        <div class="form-group">
            <label class="form-label">Departamento</label>
            <input type="text" id="contactoDepartamento" class="form-input" placeholder="Ej: Urbanismo" required>
        </div>
        <div class="form-group">
            <label class="form-label">Email (Para recibir justificante) *</label>
            <input type="email" id="contactoEmail" class="form-input" placeholder="Ej: ejemplo@ayuntamiento.es" required>
        </div>
        
        <div class="form-group">
            <label class="form-label">Confirme su Email *</label>
            <input type="email" id="contactoEmailConfirm" class="form-input" placeholder="Repita el email" required onpaste="return false;">
            </div>
    </div>
</div>

{# --- DECLARACIÓN RESPONSABLE --- #}
<div class="card" style="border-left: 4px solid var(--theme-cementerios);">
    <div style="margin-bottom: 1.5rem; padding: 1rem; background-color: #f8fafc; border: 1px solid #e2e8f0; border-radius: 8px;">
        <label style="display: flex; gap: 10px; cursor: pointer; align-items: flex-start;">
            <input type="checkbox" id="checkConformidad" style="width: 20px; height: 20px; margin-top: 2px; cursor: pointer;">
            <span style="font-size: 0.95rem; color: #334155; line-height: 1.4;">
                <strong>Declaración de veracidad:</strong> Como responsable, 
                confirmo que los datos introducidos son correctos y actualizados.
            </span>
        </label>
    </div>

<div id="progressContainer" style="display: none; margin-bottom: 20px;">
    <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
        <span id="progressText" style="font-size: 0.85rem; font-weight: 600; color: #475569;">Preparando envío...</span>
        <span id="progressPercentage" style="font-size: 0.85rem; font-weight: 700; color: var(--theme-cementerios);">0%</span>
    </div>
    <div style="width: 100%; background-color: #e2e8f0; border-radius: 999px; height: 10px; overflow: hidden;">
        <div id="progressBar" style="width: 0%; height: 100%; background-color: var(--theme-cementerios); transition: width 0.4s ease; border-radius: 999px;"></div>
    </div>
</div>
    
<button id="btnEnviar" class="btn btn-primary btn-cementerios" disabled style="opacity: 0.6; cursor: not-allowed;">
        Enviar Datos
</button>
    
    <div id="mensaje" class="message"></div>
</div>

{% endif %}
{% endblock %}

{% block scripts %}
<script>
document.addEventListener("DOMContentLoaded", () => {

    // 1. SETUP DE ESTILOS
    const header = document.querySelector('.site-header');
    if(header) header.classList.add('header-cementerios');

    // 2. CONFIGURACIÓN GLOBAL
    window.EIEL_CONFIG = {
        muniCode: "{{ muni_code }}",
        muniName: "{{ muni_display }}",
        fase: "{{ fase_actual }}",
        urlGenerarPdf: "{{ url_generar_pdf }}",
        urlAdjuntos: "{{ url_adjuntos }}",
        urlLogger: "{{ url_logger }}",
        hasAvisos: {{ 'true' if avisos_personalizados and avisos_personalizados|length > 0 else 'false' }},
        yearActual: new Date().getFullYear() // Año dinámico para validaciones
    };
    
    // 3. INICIALIZACIÓN UI
    // 3.1 Marcado visual de obligatoriedad en observaciones
    if (window.EIEL_CONFIG.hasAvisos) {
        const labelObs = document.querySelector("label[for='observaciones']");
        if (labelObs) {
            labelObs.innerHTML += " <span style='color:#ef4444; font-weight:bold;'>(* Obligatorio por requerimiento)</span>";
        }
    }

    // 3.2 Lógica específica de Cementerios (Cálculo de Totales)
    const cementerios = {{ cementerios_json | safe }};
    
    function calcularTotales() {
        cementerios.forEach((cem, index) => {
            const cemIndex = index + 1;
            const inputs = document.querySelectorAll(`input[data-cem="${cemIndex}"]`);
            
            let totales = { fosas: 0, nichos: 0, columbarios: 0, osarios: 0 };
            
            inputs.forEach(input => {
                const tipo = input.dataset.tipo;
                const valor = parseInt(input.value) || 0;
                
                if (tipo.includes('fosas')) totales.fosas += valor;
                if (tipo.includes('nichos')) totales.nichos += valor;
                if (tipo.includes('columbarios')) totales.columbarios += valor;
                if (tipo.includes('osarios')) totales.osarios += valor;
            });
            
            const setTotal = (id, val) => {
                const el = document.getElementById(id);
                if(el) el.textContent = val;
            };

            setTotal(`total_fosas_${cemIndex}`, totales.fosas);
            setTotal(`total_nichos_${cemIndex}`, totales.nichos);
            setTotal(`total_columbarios_${cemIndex}`, totales.columbarios);
            setTotal(`total_osarios_${cemIndex}`, totales.osarios);
        });
    }

    document.addEventListener('input', (e) => {
        if (e.target.type === 'number' && e.target.dataset.cem) {
            calcularTotales();
        }
    });

    // 4. SERVICIOS Y UTILIDADES DE UI
    const UIProgress = {
    container: document.getElementById("progressContainer"),
    bar: document.getElementById("progressBar"),
    text: document.getElementById("progressText"),
    percent: document.getElementById("progressPercentage"),
    //Variable para recordar el punto más alto alcanzado
    maxReached: 0, 

    show(totalTasks) {
        this.maxReached = 0; // Reiniciamos al empezar
        if (this.container) this.container.style.display = 'block';
        this.update(0, totalTasks, "Iniciando envío...");
    },

    update(completed, total, message) {
        const msg = message.toLowerCase();
        // Detectamos si es el paso del registro o PDF
        const isFinalStep = msg.includes("pdf") || msg.includes("registro") || msg.includes("justificante");
        
        let targetPercentage = 0;
        if (total > 0) {
            const fileWeight = 90 / total;
            targetPercentage = isFinalStep ? 95 : Math.round(completed * fileWeight);
        } else {
            targetPercentage = isFinalStep ? 95 : 0;
        }

        // --- EL BLOQUEO DE SEGURIDAD ---
        // Solo actualizamos si el nuevo porcentaje es mayor al que ya mostramos
        if (targetPercentage > this.maxReached) {
            this.maxReached = targetPercentage;
            if (this.bar) this.bar.style.width = this.maxReached + "%";
            if (this.percent) this.percent.textContent = this.maxReached + "%";
        }
        
        // El texto sí lo actualizamos siempre para dar feedback constante
        if (this.text && message) this.text.textContent = message;
    },

    complete() {
        this.maxReached = 100;
        if (this.bar) {
            this.bar.style.width = "100%";
            this.bar.style.backgroundColor = "#22c55e"; // Color de éxito
        }
        if (this.percent) this.percent.textContent = "100%";
        if (this.text) this.text.textContent = "✅ ¡Envío completado con éxito!";
    }
    };

    const UploadService = {
        toBase64: file => new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => resolve(reader.result.split(',')[1]);
            reader.onerror = error => reject(error);
        }),

        async uploadFile(file, tipoFicha, muniCode, seccion = "DOCUMENTACION", idEnvio) {
            try {
                const base64 = await this.toBase64(file);
                const userEmail = document.getElementById("contactoEmail").value || "anonimo";
                const payload = {
                    filename: file.name,
                    mimeType: file.type,
                    bytesBase64: base64, 
                    municipio: muniCode,
                    usuario: userEmail,
                    tipo: tipoFicha,
                    seccion: seccion,
                    id_envio: idEnvio
                };
                await fetch(window.EIEL_CONFIG.urlAdjuntos, {
                    method: 'POST', mode: 'no-cors',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                return true;
            } catch (e) { return false; }
        }
    };

    // 5. GESTIÓN DE ARCHIVOS (UI)
    let archivos = [];
    const fileInput = document.getElementById("fileInput");
    const fileList = document.getElementById("fileList");

    if (fileInput) {
        fileInput.onchange = () => {
            archivos.push(...Array.from(fileInput.files));
            renderArchivos();
            fileInput.value = '';
        };
    }

    window.eliminarArchivo = (i) => {
        archivos.splice(i, 1);
        renderArchivos();
    }

    function renderArchivos() {
        if (!fileList) return;
        if (archivos.length === 0) {
            fileList.innerHTML = '';
            return;
        }
        fileList.innerHTML = archivos.map((f, i) => `
            <div style="display: flex; justify-content: space-between; align-items: center; background: #f8fafc; padding: 0.5rem 1rem; border-radius: 6px; border: 1px solid var(--border);">
                <span>📄 ${f.name}</span>
                <button type="button" onclick="eliminarArchivo(${i})" class="btn-danger" style="background:none; border:none; color:red; cursor:pointer;">✖</button>
            </div>
        `).join("");
    }

    // 6. LÓGICA DE ENVÍO Y VALIDACIÓN
    const btnEnviar = document.getElementById("btnEnviar");
    const checkConformidad = document.getElementById("checkConformidad");
    const mensajeDiv = document.getElementById("mensaje");

    function mostrarMensaje(texto, tipo) {
        if(!mensajeDiv) return;
        mensajeDiv.textContent = texto;
        mensajeDiv.className = `message ${tipo}`;
        mensajeDiv.style.display = 'block';
    }

    // 6.1 Checkbox Habilitador
    if (checkConformidad && btnEnviar) {
        checkConformidad.addEventListener('change', function() {
            if (this.checked) {
                btnEnviar.disabled = false;
                btnEnviar.style.opacity = "1";
                btnEnviar.style.cursor = "pointer";
            } else {
                btnEnviar.disabled = true;
                btnEnviar.style.opacity = "0.6";
                btnEnviar.style.cursor = "not-allowed";
            }
        });
    }

    // 6.2 Listener Principal de Envío
        if (btnEnviar) {
            btnEnviar.addEventListener("click", async () => {
                // A. Preparación y Bloqueo UI
                // Generamos el ID único del expediente al principio
                const idBatch = "ENVIO_" + new Date().getTime();
                
                // Congelamos el formulario para garantizar la integridad de los datos durante el envío
                toggleFormFreeze(true);

                // B. Lectura de Variables
                const nombreContacto = document.getElementById("contactoNombre").value.trim();
                const departamentoVal = document.getElementById("contactoDepartamento").value.trim();
                const emailContacto = document.getElementById("contactoEmail").value.trim();
                const emailConfirmInput = document.getElementById("contactoEmailConfirm");
                const emailConfirm = emailConfirmInput ? emailConfirmInput.value.trim() : emailContacto; 
                const obsField = document.getElementById("observaciones");
                const obsValue = obsField.value.trim();
                const regexEmail = /^[^@\s]+@[^@\s]+\.[^@\s]+$/;

                // C. Validaciones
                    // 1: Identidad 
                    if (nombreContacto.length < 2) {
                        mostrarMensaje("⚠️ El nombre es demasiado corto (mín. 2 caracteres).", "warning");
                        toggleFormFreeze(false); // Desbloqueamos para permitir corrección
                        return;
                    }
                    if (!regexEmail.test(emailContacto) || emailContacto.toLowerCase() !== emailConfirm.toLowerCase()) {
                        mostrarMensaje("⚠️ Verifique que el Email sea válido y coincida.", "error");
                        toggleFormFreeze(false);
                        return;
                    }

                    // 2: Requerimiento de Observaciones (Avisos pendientes)
                    if (window.EIEL_CONFIG.hasAvisos && obsValue.length < 15) {
                        mostrarMensaje("⚠️ Es OBLIGATORIO responder en 'Observaciones' (mín. 15 caracteres) por requerimientos pendientes.", "error");
                        obsField.focus(); 
                        toggleFormFreeze(false);
                        return;
                    }
                    
                    // 3: Persistencia de datos del técnico (Memoria proactiva)
                    localStorage.setItem("eiel_user_name", nombreContacto);
                    localStorage.setItem("eiel_user_email", emailContacto);
                    localStorage.setItem("eiel_user_dept", departamentoVal);

                // D. Subida de Archivos a Google Drive
                const totalArchivos = archivos.length;
                let completados = 0;
                UIProgress.show(totalArchivos);

                if (totalArchivos > 0) {
                    const promesasSubida = archivos.map(file => 
                        UploadService.uploadFile(file, 'cementerio', window.EIEL_CONFIG.muniCode, 'DOCUMENTACION', idBatch)
                        .then(res => {
                            completados++;
                            UIProgress.update(completados, totalArchivos, `Subido: ${file.name}`);
                            return res;
                        })
                    );
                    await Promise.all(promesasSubida);
                }

                // E. Recopilación de Datos para el Registro
                UIProgress.update(completados, totalArchivos, "Enviando datos y generando justificante PDF...");

                    // 1: Procesamiento de datos de los cementerios de la tabla
                    const datosCementerios = cementerios.map((cem, index) => {
                        const cemIndex = index + 1;
                        const inputs = document.querySelectorAll(`input[data-cem="${cemIndex}"]`);
                        let datos = { nombre: cem.nombre };
                        inputs.forEach(input => {
                            const tipo = input.dataset.tipo;
                            const val = parseInt(input.value);
                            datos[tipo] = isNaN(val) ? 0 : val;
                        });
                        return datos;
                    });

                    // 2: Preparación del Payload para el PDF y el Log
                    const payload = {
                        tipo_formulario: "cementerios",
                        fase: window.EIEL_CONFIG.fase,
                        id_envio: idBatch,
                        cementerios_data: JSON.stringify(datosCementerios),
                        observaciones: obsValue,
                        nombre_contacto: nombreContacto,
                        departamento_contacto: departamentoVal,
                        email_contacto: emailContacto,
                        municipio_codigo: window.EIEL_CONFIG.muniCode,
                        municipio_nombre: window.EIEL_CONFIG.muniName,
                        timestamp_envio: new Date().toISOString(),
                        archivos_adjuntos: archivos.map(a => a.name).join("\n")
                    };

                // F. Registro y Envío de PDF
                try {
                    await fetch(window.EIEL_CONFIG.urlGenerarPdf, {
                        method: "POST",
                        mode: "no-cors",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(payload)
                    });

                    // G. Finalización y Limpieza
                    UIProgress.complete();
                    if(mensajeDiv) mensajeDiv.style.display = 'none';

                    // Reset de variables y UI visual
                    archivos = [];
                    renderArchivos(); 

                    document.querySelectorAll("input, select, textarea").forEach(el => {
                       if(!['button', 'submit', 'checkbox'].includes(el.type)) el.value = '';
                       if(el.tagName === 'SELECT') el.selectedIndex = 0;
                    });

                    if(checkConformidad) checkConformidad.checked = false;
                    
                    // Recalcular totales visuales para limpiar la tabla
                    if (typeof calcularTotales === 'function') calcularTotales();

                    // Bloqueo final del botón tras éxito
                    btnEnviar.disabled = true;
                    btnEnviar.style.opacity = "0.6";
                    btnEnviar.style.cursor = "not-allowed";

                } catch (error) {
                    console.error(error);
                    mostrarMensaje(`❌ Error técnico: ${error.message}`, "error");
                    // En caso de fallo, liberamos el formulario para permitir correcciones
                    toggleFormFreeze(false);
                }
            });
        }
});
</script>
