{% extends "base.html.j2" %}

{% block bloque_fase %}
    Fase {{ fase_actual }}
{% endblock %}

{% block title %}Equipamientos y Dotaciones{% endblock %}
{% block header_icon %}🏛️{% endblock %}
{% block header_title %}Equipamientos y Dotaciones{% endblock %}

{% block content %}

<style>
    /* 1. Estilos para los Puntos de Estado (Status Dots) */
    /* Coinciden con la normalización del JS: minúsculas y sin acentos */
    .status-dot { 
        height: 10px; 
        width: 10px; 
        border-radius: 50%; 
        display: inline-block; 
        margin-right: 8px; 
        border: 1px solid rgba(0,0,0,0.1); 
    }
    .dot-bueno { background-color: #22c55e; }       /* Verde */
    .dot-regular { background-color: #f59e0b; }     /* Naranja */
    .dot-malo { background-color: #ef4444; }        /* Rojo */
    .dot-enejecucion { background-color: #d946ef; }  /* Magenta */

    /* 2. Estilos para el Acordeón (Diseño Compacto) */
    .card-accordion { 
        margin-bottom: 8px; 
        border: 1px solid #e2e8f0; 
        border-radius: 8px; 
        overflow: hidden; 
        transition: all 0.2s; 
    }
    .card-accordion[open] { 
        border-color: #10b981; 
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); 
    }
    
    /* Cabecera del acordeón con flecha a la izquierda */
    .acc-header { 
        cursor: pointer; 
        display: flex; 
        align-items: center; 
        gap: 12px;
        padding: 12px 16px; 
        background: #f8fafc; 
        font-weight: 700; 
        color: #1e293b; 
        list-style: none; 
        transition: background 0.2s;
    }
    .acc-header::-webkit-details-marker { display: none; } /* Ocultar flecha nativa */
    
    /* 3. La Flecha (Chevron) Interactiva */
    .acc-chevron {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
        color: #64748b;
        flex-shrink: 0;
    }
    details[open] .acc-chevron {
        transform: rotate(90deg); /* Apunta hacia abajo al abrir */
        color: #10b981;
    }

    /* 4. Efectos Visuales e Iconos */
    .card-accordion:hover {
        border-color: #10b981;
        background-color: #f0fdf4;
    }
    .acc-header:hover { background: #f1f5f9; }
    
    .acc-title-box { 
        display: flex; 
        align-items: center; 
        gap: 12px; 
        flex-grow: 1; 
    }
    .acc-icon { color: #10b981; width: 22px; }
    .acc-badge { 
        background: #e2e8f0; 
        padding: 2px 10px; 
        border-radius: 12px; 
        font-size: 0.75rem; 
        color: #475569; 
        margin-left: auto;
    }

    /* 5. Utilidades y Campos de Formulario */
    .hidden { display: none !important; }
    
    /* Bloquea el redimensionado manual de los cuadros de texto */
    textarea.form-input {
        resize: none;
        overflow-y: auto;
    }
</style>

{# --- INSTRUCCIONES --- #}
<div style="background-color: #eff6ff; ...">
    <h4 style="..."> ℹ️ Instrucciones </h4>
    <ul style="margin-top: 0.5rem; padding-left: 1.5rem;"> 
        <li style="margin-bottom: 0.5rem;"> Si el estado de conservación ha variado, seleccione la nueva opción en el desplegable. </li>
        <li style="margin-bottom: 0.5rem;"> Use la miniatura para identificar el edificio y el enlace para consultar la ficha oficial en el Geoportal. </li>
    </ul>
</div>


{# --- ACORDEONES DE EQUIPAMIENTOS GENERALES --- #}
{% for categoria, lista in equipamientos_agrupados.general.items() %}
<details class="card-accordion">
    <summary class="acc-header">
        <i data-lucide="chevron-right" class="acc-chevron"></i>
        
        <div class="acc-title-box">
            <i data-lucide="{{ lista[0].icono }}" class="acc-icon"></i>
            <span>{{ categoria }}</span>
            <span class="acc-badge">{{ lista|length }} registros</span>
        </div>
    </summary>
    
    <div class="table-wrapper" style="margin: 0; border: none; border-top: 1px solid #e2e8f0;">
        <table class="data-table" style="font-size: 0.85rem;">
            <thead>
                <tr>
                    <th width="12%">Foto</th>
                    <th width="48%">Denominación</th>
                    <th width="20%">Estado</th>
                    <th width="20%">Notas</th>
                </tr>
            </thead>
            <tbody>
                {% for eq in lista %}
                <tr class="fila-equip" data-id="{{ eq.cod }}">
                    <td class="text-center">
                        <img src="{{ eq.url_foto }}" style="width: 45px; height: 35px; object-fit: cover; border-radius: 4px; cursor: zoom-in; border: 1px solid #ddd;" onclick="Swal.fire({imageUrl: this.src, imageWidth: 800, showConfirmButton: false, background: 'rgba(0,0,0,0.9)', backdrop: true})">
                        <br><a href="{{ eq.url_visor }}" target="_blank" style="font-size: 0.65rem; color: #3b82f6; text-decoration: none;">🗺️ Mapa</a>
                    </td>
                    <td>
                        <div class="nombre-eq" style="font-weight: 600; color: #1e293b;">{{ eq.nombre }}</div>
                        <small style="color: #94a3b8;">Cód: {{ eq.cod }}</small>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center;">
                            <span class="status-dot dot-{{ eq.estado_txt.lower().replace(' ', '').replace('ó', 'o') }}"></span>
                            <select class="form-select select-estado-eq" data-id="{{ eq.cod }}" style="font-size: 0.8rem; padding: 2px 4px; border-color: #e2e8f0;">
                                <option value="Bueno" {% if eq.estado_txt == 'Bueno' %}selected{% endif %}>Bueno</option>
                                <option value="Regular" {% if eq.estado_txt == 'Regular' %}selected{% endif %}>Regular</option>
                                <option value="Malo" {% if eq.estado_txt == 'Malo' %}selected{% endif %}>Malo</option>
                                <option value="En ejecución" {% if eq.estado_txt == 'En ejecución' %}selected{% endif %}>En ejecución</option>
                            </select>
                        </div>
                    </td>
                    <td>
                        <textarea class="form-input txt-obs-eq" rows="1" style="font-size: 0.75rem; min-height: 32px;" placeholder="..."></textarea>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</details>
{% endfor %}

{# --- SECCIÓN ESPECIAL: EDIFICIOS PÚBLICOS SIN USO --- #}
<div class="card" style="border-left: 4px solid #f43f5e; margin-top: 25px; background: #fff1f2;">
    <h3 style="color: #9f1239; display: flex; align-items: center; gap: 10px; margin-bottom: 15px;">
        <i data-lucide="door-closed"></i> Edificios Públicos Sin Uso
    </h3>
    <p style="font-size: 0.85rem; color: #be123c; margin-bottom: 15px; font-style: italic;">
        Indique si estos edificios siguen sin actividad o si han pasado a tener un uso concreto.
    </p>

    {% for su in equipamientos_agrupados.sin_uso %}
    <div class="fila-sin-uso card" style="padding: 15px; margin-bottom: 10px; border: 1px solid #fecaca; background: white;" data-id="{{ su.cod }}">
        <div style="display: flex; gap: 15px; align-items: flex-start; margin-bottom: 10px;">
            <div style="text-align: center; flex-shrink: 0;">
                <img src="{{ su.url_foto }}" style="width: 45px; height: 35px; object-fit: cover; border-radius: 4px; cursor: zoom-in; border: 1px solid #ddd;" onclick="Swal.fire({imageUrl: this.src, imageWidth: 800, showConfirmButton: false, background: 'rgba(0,0,0,0.9)', backdrop: true})">
                <br>
                <a href="{{ su.url_visor }}" target="_blank" style="font-size: 0.65rem; color: #3b82f6; text-decoration: none; font-weight: bold;">🗺️ Mapa</a>
            </div>

            <div style="flex-grow: 1;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                    <strong style="color: #1e293b; font-size: 1rem;">{{ su.nombre }}</strong>
                    <span class="acc-badge">Cód: {{ su.cod }}</span>
                </div>
                
                <div style="display: flex; align-items: center; gap: 15px; flex-wrap: wrap; margin-top: 10px;">
                    <label style="font-size: 0.9rem; font-weight: 600; color: #475569;">¿Sigue sin uso?</label>
                    <select class="form-select select-sin-uso" data-id="{{ su.cod }}" style="width: auto; padding: 4px 10px;" 
                            onchange="this.value === 'NO' ? document.getElementById('box_uso_{{su.cod}}').classList.remove('hidden') : document.getElementById('box_uso_{{su.cod}}').classList.add('hidden')">
                        <option value="SI">SÍ, continúa sin uso</option>
                        <option value="NO">NO, ya tiene un uso</option>
                    </select>
                    
                    <div id="box_uso_{{su.cod}}" class="hidden" style="flex: 1; min-width: 200px;">
                        <input type="text" class="form-input txt-nuevo-uso" placeholder="Indique el nuevo uso..." style="font-size: 0.85rem;">
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>



