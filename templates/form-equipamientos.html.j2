{% extends "base.html.j2" %}

{% block bloque_fase %}
    Fase {{ fase_actual }}
{% endblock %}

{% block title %}Equipamientos y Dotaciones{% endblock %}
{% block header_icon %}🏛️{% endblock %}
{% block header_title %}Equipamientos y Dotaciones{% endblock %}

{% block content %}

<style>
    /* Estilos para el estado (Status Dots) */
    .status-dot { height: 10px; width: 10px; border-radius: 50%; display: inline-block; margin-right: 8px; border: 1px solid rgba(0,0,0,0.1); }
    .dot-Bueno { background-color: #22c55e; } /* Verde */
    .dot-Regular { background-color: #f59e0b; } /* Naranja */
    .dot-Malo { background-color: #ef4444; } /* Rojo */
    .dot-ejecucion { background-color: #d946ef; } /* Magenta */

    /* Estilos para el Acordeón compacto */
    .card-accordion { margin-bottom: 8px; border: 1px solid #e2e8f0; border-radius: 8px; overflow: hidden; transition: all 0.2s; }
    .card-accordion[open] { border-color: #10b981; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); }
    
    .acc-header { 
        cursor: pointer; display: flex; align-items: center; justify-content: space-between;
        padding: 12px 16px; background: #f8fafc; font-weight: 700; color: #1e293b; list-style: none;
    }
    .acc-header::-webkit-details-marker { display: none; } /* Quita flecha nativa */
    .acc-header:hover { background: #f1f5f9; }
    
    .acc-title-box { display: flex; align-items: center; gap: 12px; }
    .acc-icon { color: #10b981; width: 20px; }
    .acc-badge { background: #e2e8f0; padding: 2px 8px; border-radius: 12px; font-size: 0.75rem; color: #475569; }

    .hidden { display: none !important; }
</style>

{# --- INSTRUCCIONES --- #}
<div style="background-color: #f0fdf4; border-left: 4px solid #22c55e; padding: 1.2rem; border-radius: 4px; margin-bottom: 20px; box-shadow: 0 1px 2px rgba(0,0,0,0.05);">
    <h4 style="margin: 0 0 0.8rem 0; font-weight: 700; color: #166534; display: flex; align-items: center; gap: 8px;">
        ℹ️ Instrucciones de Revisión
    </h4>
    <ul style="margin: 0 0 0 1.5rem; padding: 0; list-style-type: disc; color: #14532d; font-size: 0.95rem; line-height: 1.5;">
        <li style="margin-bottom: 0.5rem;">
            <strong>Validación:</strong> Si el equipamiento no ha sufrido cambios, marque <strong>"Todo OK"</strong> para confirmar su estado actual.
        </li>
        <li style="margin-bottom: 0.5rem;">
            <strong>Cambios:</strong> Si el estado de conservación ha variado, seleccione la nueva opción en el desplegable.
        </li>
        <li style="margin-bottom: 0.5rem;">
            <strong>Fotos y Links:</strong> Use la miniatura para identificar el edificio y el enlace para consultar la ficha oficial en el Geoportal.
        </li>
    </ul>
</div>

{# --- ACORDEONES DE EQUIPAMIENTOS GENERALES --- #}
{% for categoria, lista in equipamientos_agrupados.general.items() %}
<details class="card-accordion">
    <summary class="acc-header">
        <div class="acc-title-box">
            <i data-lucide="{{ lista[0].icono }}" class="acc-icon"></i>
            <span>{{ categoria }}</span>
            <span class="acc-badge">{{ lista|length }} registros</span>
        </div>
        <i data-lucide="chevron-down" style="width: 18px; opacity: 0.5;"></i>
    </summary>
    
    <div class="table-wrapper" style="margin: 0; border: none; border-top: 1px solid #e2e8f0;">
        <table class="data-table" style="font-size: 0.85rem;">
            <thead>
                <tr>
                    <th width="12%">Foto</th>
                    <th width="48%">Denominación</th>
                    <th width="20%">Estado</th>
                    <th width="20%">Notas</th>
                </tr>
            </thead>
            <tbody>
                {% for eq in lista %}
                <tr class="fila-equip" data-id="{{ eq.cod }}">
                    <td class="text-center">
                        <img src="{{ eq.url_foto }}" style="width: 45px; height: 35px; object-fit: cover; border-radius: 4px; cursor: zoom-in; border: 1px solid #ddd;" 
                             onclick="Swal.fire({imageUrl: this.src, imageWidth: 600, showConfirmButton: false})">
                        <br><a href="{{ eq.url_visor }}" target="_blank" style="font-size: 0.65rem; color: #3b82f6; text-decoration: none;">🗺️ Mapa</a>
                    </td>
                    <td>
                        <div class="nombre-eq" style="font-weight: 600; color: #1e293b;">{{ eq.nombre }}</div>
                        <small style="color: #94a3b8;">Cód: {{ eq.cod }}</small>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center;">
                            <span class="status-dot dot-{{ eq.estado_txt.replace(' ', '') }}"></span>
                            <select class="form-select select-estado-eq" data-id="{{ eq.cod }}" style="font-size: 0.8rem; padding: 2px 4px; border-color: #e2e8f0;">
                                <option value="Bueno" {% if eq.estado_txt == 'Bueno' %}selected{% endif %}>Bueno</option>
                                <option value="Regular" {% if eq.estado_txt == 'Regular' %}selected{% endif %}>Regular</option>
                                <option value="Malo" {% if eq.estado_txt == 'Malo' %}selected{% endif %}>Malo</option>
                                <option value="En ejecución" {% if eq.estado_txt == 'En ejecución' %}selected{% endif %}>En ejecución</option>
                            </select>
                        </div>
                    </td>
                    <td>
                        <textarea class="form-input txt-obs-eq" rows="1" style="font-size: 0.75rem; min-height: 32px;" placeholder="..."></textarea>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</details>
{% endfor %}

{# --- SECCIÓN ESPECIAL: EDIFICIOS PÚBLICOS SIN USO --- #}
<div class="card" style="border-left: 4px solid #f43f5e; margin-top: 25px; background: #fff1f2;">
    <h3 style="color: #9f1239; display: flex; align-items: center; gap: 10px; margin-bottom: 15px;">
        <i data-lucide="ghost"></i> Edificios Públicos Sin Uso
    </h3>
    <p style="font-size: 0.85rem; color: #be123c; margin-bottom: 15px; font-style: italic;">
        Indique si estos edificios siguen sin actividad o si han pasado a tener un uso concreto.
    </p>

    {% for su in equipamientos_agrupados.sin_uso %}
    <div class="fila-sin-uso card" style="padding: 15px; margin-bottom: 10px; border: 1px solid #fecaca; background: white;" data-id="{{ su.cod }}">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
            <strong style="color: #1e293b;">{{ su.nombre }}</strong>
            <span class="acc-badge">Cód: {{ su.cod }}</span>
        </div>
        
        <div style="display: flex; align-items: center; gap: 15px; flex-wrap: wrap;">
            <label style="font-size: 0.9rem; font-weight: 600;">¿Sigue sin uso?</label>
            <select class="form-select select-sin-uso" data-id="{{ su.cod }}" style="width: auto; padding: 4px 10px;" 
                    onchange="this.value === 'NO' ? document.getElementById('box_uso_{{su.cod}}').classList.remove('hidden') : document.getElementById('box_uso_{{su.cod}}').classList.add('hidden')">
                <option value="SI">SÍ, continúa sin uso</option>
                <option value="NO">NO, ya tiene un uso</option>
            </select>
            
            <div id="box_uso_{{su.cod}}" class="hidden" style="flex: 1; min-width: 250px;">
                <input type="text" class="form-input txt-nuevo-uso" placeholder="¿Qué uso tiene actualmente? (Ej: Biblioteca, Almacén...)" style="font-size: 0.85rem;">
            </div>
        </div>
    </div>
    {% endfor %}
</div>



{# --- REQUERIMIENTOS --- #}
{% if avisos_personalizados and avisos_personalizados|length > 0 %}
<div class="card" style="border-left: 4px solid #FCD34D; background-color: #FEFCE8;">
    <div style="padding: 1rem;">
        <h4 style="margin-top: 0; color: #92400E; display: flex; align-items: center; gap: 8px;">⚠️ Otra información solicitada</h4>
        <ul style="list-style: none; padding: 0; margin: 0;">
            {% for aviso in avisos_personalizados %}
                <li style="background: white; padding: 10px; margin-bottom: 8px; border-radius: 6px; border: 1px solid #FDE68A; display: flex; gap: 10px;">
                    <span style="font-size: 1.1rem;">🔸</span>
                    <span style="font-weight: 500;">{{ aviso.mensaje }}</span>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endif %}

{# --- OBSERVACIONES GENERALES Y ADJUNTOS --- #}
<div class="card" style="border-left: 4px solid #10b981;">
    <h2 class="section-title">📝 Observaciones Generales y Adjuntos</h2>
    <div class="form-group">
        <label for="observaciones" class="form-label">Comentarios adicionales para todo el envío:</label>
        <textarea id="observaciones" class="form-input" rows="3" placeholder="Aclare cualquier detalle sobre el inventario de equipamientos..."></textarea>
    </div>
    
    <div class="form-group" style="margin-top: 1.5rem;">
        <label class="form-label">Adjuntar documentos o fotos nuevas (Opcional):</label>
        <div class="file-upload-area" onclick="document.getElementById('fileInputEquip').click()" style="border: 2px dashed #cbd5e1; padding: 1rem; text-align: center; cursor: pointer; border-radius: 8px;">
            <div style="font-size: 1.5rem; margin-bottom: 5px;">📎</div>
            <div style="font-weight: 600; color: #475569;">Haga clic para adjuntar archivos</div>
            <input type="file" id="fileInputEquip" multiple style="display: none;">
        </div>
        <div id="fileListEquip" style="margin-top: 0.8rem; display: flex; flex-direction: column; gap: 0.5rem;"></div>
    </div>
</div>

{# --- CONTACTO Y ENVÍO --- #}
<div class="card" style="border-left: 4px solid #10b981;">
    <h2 class="section-title">👤 Datos de Contacto</h2>
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
        <div class="form-group"><label class="form-label">Nombre y apellidos *</label><input type="text" id="contactoNombre" class="form-input" required></div>
        <div class="form-group"><label class="form-label">Departamento</label><input type="text" id="contactoDepartamento" class="form-input" required></div>
        <div class="form-group"><label class="form-label">Email *</label><input type="email" id="contactoEmail" class="form-input" required></div>
        <div class="form-group"><label class="form-label">Confirme Email *</label><input type="email" id="contactoEmailConfirm" class="form-input" required onpaste="return false;"></div>
    </div>
</div>

<div class="card" style="border-left: 4px solid #10b981;">
    <div style="margin-bottom: 1.5rem; padding: 1rem; background-color: #f8fafc; border: 1px solid #e2e8f0; border-radius: 8px;">
        <label style="display: flex; gap: 10px; cursor: pointer;">
            <span style="font-size: 0.95rem; color: #334155;"><strong>Declaración de veracidad:</strong> Confirmo que los datos revisados son correctos.</span>
        </label>
    </div>
    
    <div id="progressContainer" style="display: none; margin-bottom: 20px;">
        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
            <span id="progressText" style="font-size: 0.85rem; font-weight: 600;">Preparando envío...</span>
            <span id="progressPercentage" style="font-size: 0.85rem; font-weight: 700;">0%</span>
        </div>
        <div style="width: 100%; background-color: #e2e8f0; border-radius: 999px; height: 10px; overflow: hidden;">
            <div id="progressBar" style="width: 0%; height: 100%; background-color: #10b981; transition: width 0.4s ease;"></div>
        </div>
    </div>

    <button id="btnEnviar" class="btn btn-primary" onclick="enviarEquipamientos()" disabled>
    Enviar Datos de Equipamientos
    </button>
    <div id="mensaje" class="message"></div>
</div>

{% endblock %}

{% block scripts %}
<script>
document.addEventListener("DOMContentLoaded", () => {
    
    // 1. CONFIGURACIÓN GLOBAL
    window.EIEL_CONFIG = {
        muniCode: "{{ muni_code }}",
        muniName: "{{ muni_display }}",
        fase: "{{ fase_actual }}",
        urlGenerarPdf: "{{ url_generar_pdf }}",
        urlAdjuntos: "{{ url_adjuntos }}",
        urlLogger: "{{ url_logger }}"
    };

    // 2. LÓGICA DE EXCLUSIÓN MUTUA (TODO OK vs COMBO)
    document.querySelectorAll('.chk-ok').forEach(chk => {
        chk.addEventListener('change', function() {
            const id = this.dataset.id;
            const select = document.querySelector(`.select-estado-eq[data-id="${id}"]`);
            if (this.checked) {
                select.value = select.dataset.original;
                select.disabled = true;
                select.style.backgroundColor = "#f0fdf4";
            } else {
                select.disabled = false;
                select.style.backgroundColor = "#ffffff";
            }
        });
    });

    document.querySelectorAll('.select-estado-eq').forEach(sel => {
        sel.addEventListener('change', function() {
            const id = this.dataset.id;
            const check = document.querySelector(`.chk-ok[data-id="${id}"]`);
            if (this.value !== this.dataset.original) {
                check.checked = false;
            }
        });
    });

    // 3. GESTIÓN DE ADJUNTOS (SIMPLIFICADA)
    let archivosAdjuntos = [];
    const fileInput = document.getElementById('fileInputEquip');
    const fileList = document.getElementById('fileListEquip');

    fileInput.addEventListener('change', () => {
        archivosAdjuntos.push(...Array.from(fileInput.files));
        renderFiles();
        fileInput.value = '';
    });

    window.removeFile = (i) => { 
        archivosAdjuntos.splice(i, 1); 
        renderFiles();
    };

    function renderFiles() {
        fileList.innerHTML = archivosAdjuntos.map((f, i) => `
            <div style="display:flex; justify-content:space-between; background:#f1f5f9; padding:8px; border-radius:6px; font-size:0.85rem;">
                <span>📄 ${f.name}</span>
                <button onclick="removeFile(${i})" style="color:red; border:none; background:none; cursor:pointer;">✕</button>
            </div>
        `).join("");
    }

    // --- 4. ACTIVACIÓN DEL BOTÓN DE ENVÍO ---
    const btnEnviar = document.getElementById("btnEnviar");
    const checkConf = document.getElementById("checkConformidad");

    if (checkConf && btnEnviar) {
        checkConf.addEventListener('change', function() {
            btnEnviar.disabled = !this.checked;
            btnEnviar.style.opacity = this.checked ? "1" : "0.6";
            btnEnviar.style.cursor = this.checked ? "pointer" : "not-allowed";
        });
    }

    // --- 5. LA FUNCIÓN DE ENVÍO (MÁXIMA PRIORIDAD) ---
    // La definimos como una función global (window) para que el 'onclick' del HTML la encuentre
    window.enviarEquipamientos = async function() {
        const nombre = document.getElementById("contactoNombre").value.trim();
        const email = document.getElementById("contactoEmail").value.trim();
        const emailConfirm = document.getElementById("contactoEmailConfirm").value.trim();
        const depto = document.getElementById("contactoDepartamento").value.trim();
        const obsGenerales = document.getElementById("observaciones").value.trim();

        // Validaciones básicas de contacto 
        if (!nombre || !email || email !== emailConfirm) {
            Swal.fire("Error", "Verifique los datos de contacto y que el email coincida.", "error");
            return;
        }

        const idEnvio = "EXP_E_" + new Date().getTime(); 
        toggleFormFreeze(true); // Congelamos el formulario como en Obras
        UIProgress.show(archivosAdjuntos.length);

        try {
            // Subida de archivos 
            let nombresArchivos = [];
            for (let i = 0; i < archivosAdjuntos.length; i++) {
                const file = archivosAdjuntos[i];
                UIProgress.update(i, archivosAdjuntos.length, `Subiendo: ${file.name}`);
                await UploadService.uploadFile(file, 'equipamiento', window.EIEL_CONFIG.muniCode, 'GENERAL', idEnvio);
                nombresArchivos.push(file.name);
            }

            // Recopilación de datos de la tabla para el PDF 
            UIProgress.update(archivosAdjuntos.length, archivosAdjuntos.length, "Generando PDF...");
        
        const datosEquipamientos = [];

            // Registros de las tablas de los acordeones
            document.querySelectorAll('.fila-equip').forEach(fila => {
                const categoria = fila.closest('details').querySelector('.acc-header span').textContent;
                datosEquipamientos.push({
                    categoria: categoria,
                    id: fila.dataset.id,
                    nombre: fila.querySelector('.nombre-eq').textContent,
                    estado: fila.querySelector('.select-estado-eq').value,
                    obs: fila.querySelector('.txt-obs-eq').value.trim(),
                    validado_ok: false // Siempre falso porque ya no hay check de "Todo OK"
                });
            });

            // Registros de la sección "Sin Uso"
            document.querySelectorAll('.fila-sin-uso').forEach(fila => {
                const sigueSinUso = fila.querySelector('.select-sin-uso').value;
                const nuevoUso = fila.querySelector('.txt-nuevo-uso').value.trim();
                const cod = fila.dataset.id;

                datosEquipamientos.push({
                    categoria: "EDIFICIO PÚBLICO SIN USO",
                    id: cod,
                    nombre: fila.querySelector('strong').textContent,
                    estado: sigueSinUso === 'SI' ? 'SIN USO' : 'CON USO',
                    obs: sigueSinUso === 'NO' ? "NUEVO USO: " + nuevoUso : "Confirmado sigue sin uso",
                    validado_ok: true
                });
            });

            // Envío final al Apps Script del PDF 
            const payload = {
                tipo_formulario: "equipamientos",
                fase: window.EIEL_CONFIG.fase,
                id_envio: idEnvio,
                municipio_codigo: window.EIEL_CONFIG.muniCode,
                municipio_nombre: window.EIEL_CONFIG.muniName,
                nombre_contacto: nombre,
                email_contacto: email,
                departamento_contacto: depto,
                observaciones: obsGenerales,
                datos_equipamientos_json: JSON.stringify(datosEquipamientos),
                archivos_adjuntos: nombresArchivos.join("\n")
            };

            await fetch(window.EIEL_CONFIG.urlGenerarPdf, {
                method: "POST",
                mode: "no-cors",
                body: JSON.stringify(payload)
            });

            UIProgress.complete(); 
            Swal.fire("¡Éxito!", "Justificante enviado a su email.", "success").then(() => {
                window.location.href = "index.html";
            });

        } catch (error) {
            console.error(error);
            Swal.fire("Error", "Error en el proceso: " + error.message, "error");
            toggleFormFreeze(false);
        }
    };
    lucide.createIcons();
});
</script>
{% endblock %}