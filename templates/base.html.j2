<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>{% block title %}EIEL - Encuesta de Infraestructuras{% endblock %}</title>

    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    </head>
<body>

    <header class="site-header">
        <div class="header-content">
            <div class="logo-area">
                <h1>EIEL</h1>
                <span class="badge-fase">Fase {{ fase_actual }}</span>
            </div>
            
            <div class="user-area">
                <span id="headerMuniName" class="user-email">...</span>
                <button onclick="logout()" class="btn-logout">Salir</button>
            </div>
        </div>
    </header>

    <nav class="breadcrumb-nav">
        <div class="container">
            <a href="index.html" class="back-link">
                ‚¨Ö Volver al listado de formularios
            </a>
            </div>
    </nav>

    <main class="main-container">
        <div class="form-header">
            <div class="icon-header">
                {% block header_icon %}üìù{% endblock %}
            </div>
            <div class="title-header">
                <h2>{% block header_title %}Formulario{% endblock %}</h2>
                <p class="subtitle">{{ muni_display }} (CÛdigo: {{ muni_code }})</p>
            </div>
        </div>

        {% block content %}
        {% endblock %}
    </main>

    <footer class="site-footer" style="text-align: center; padding: 2rem; color: #94a3b8; font-size: 0.85rem;">
        <p>DiputaciÛn Provincial - Encuesta de Infraestructuras y Equipamientos Locales</p>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Recuperamos los datos
            const sessionCode = localStorage.getItem("eiel_session_code");
            const sessionName = localStorage.getItem("eiel_session_name");
            
            // CORREGIDO: Ya no ponemos "2024". Si no hay dato, ser· null.
            const sessionFase = localStorage.getItem("eiel_session_fase"); 

            if (!sessionCode) {
                console.warn("? Sin sesiÛn activa. Redirigiendo...");
                window.location.href = "index.html";
            } else {
                // A. Nombre del municipio
                const headerName = document.getElementById("headerMuniName");
                if(headerName) headerName.textContent = sessionName || "Municipio";

                // B. Fase (Solo se rellena si existe el dato guardado)
                const headerFase = document.getElementById("headerFase");
                
                if (headerFase && sessionFase) {
                    // Si encontramos una fase guardada, la ponemos
                    headerFase.textContent = "Fase " + sessionFase;
                } else if (headerFase) {
                    // Si NO hay fase guardada, puedes poner un guion o dejarlo vacÌo
                    headerFase.textContent = "Fase --"; 
                }
            }
        });

        function logout() {
            localStorage.clear(); // Esto borra TODO (nombre, cÛdigo y fase) de golpe
            window.location.href = "index.html";
        }
    </script>

    {% block scripts %}
    {% endblock %}

</body>
</html>