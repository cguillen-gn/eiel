<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>{% block title %}EIEL - Encuesta de Infraestructuras{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    </head>
<body>

    <header class="site-header">
        <div class="header-content">
            <div class="logo-area">
            <h1>EIEL</h1>
            <span class="badge-fase">
                {% block bloque_fase %}Fase --{% endblock %}
            </span>
        </div>
        
            <div class="user-area">
                <span id="headerMuniName" class="user-email">...</span>
                <button onclick="logout()" class="btn-logout">Salir</button>
            </div>
        </div>
    </header>

    <nav class="breadcrumb-nav">
        <div class="container">
            <a href="index.html" class="back-link">
                ⭠ Volver al listado de formularios
            </a>
            </div>
    </nav>

    <main class="main-container">
        <div class="form-header">
            <div class="icon-header">
                {% block header_icon %}??{% endblock %}
            </div>
            <div class="title-header">
                <h2>{% block header_title %}Formulario{% endblock %}</h2>
                <p class="subtitle">{{ muni_display }} (Código: {{ muni_code }})</p>
            </div>
        </div>

        {% block content %}
        {% endblock %}
    </main>

    <footer class="site-footer" style="text-align: center; padding: 2rem; color: #94a3b8; font-size: 0.85rem;">
        <p>Diputación de Alicante - Encuesta de Infraestructura y Equipamientos Locales</p>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // 1. Recuperamos los datos de SESIÓN (Solo Código y Nombre)
            const sessionCode = localStorage.getItem("eiel_session_code");
            const sessionName = localStorage.getItem("eiel_session_name");
            
            // NOTA: Aquí hemos borrado todo lo referente a la "Fase" porque
            // la fase la inyectará cada plantilla específica, no este archivo base.

            if (!sessionCode) {
                console.warn("? Sin sesión activa. Redirigiendo...");
                window.location.href = "index.html";
            } else {
                // Ponemos el nombre del municipio si existe
                const headerName = document.getElementById("headerMuniName");
                if(headerName) headerName.textContent = sessionName || "Municipio";
            }
        });

        function logout() {
            localStorage.clear(); 
            window.location.href = "index.html";
        }
    </script>

    {% block scripts %}
    {% endblock %}

    
<script>
(function() {
    // Appscript logs acceso
    const URL_LOGGER = "https://script.google.com/macros/s/AKfycbyKUjrNj6mUqCBu8x55X-fZdt-6BTFz-XHqKKT9I5zS-b8XrWwUBKi2j2DVVdaj4Wzrpw/exec";
    
    // Evitamos loguear si estamos en local (opcional, pero útil para no ensuciar mientras pruebas)
    if (window.location.protocol === 'file:') return;

    // Preparamos los datos
    const payload = {
        municipio: "{{ muni_display }}",  // Jinja pondrá el nombre del pueblo
        pagina: window.location.pathname.split("/").pop(), // El nombre del archivo (ej: agua_03047.html)
        ua: navigator.userAgent // Info del navegador
    };

    // Enviamos el aviso sin molestar al usuario (sendBeacon es ideal para esto)
    // Si el navegador no soporta beacon, usamos fetch
    if (navigator.sendBeacon) {
        navigator.sendBeacon(URL_LOGGER, JSON.stringify(payload));
    } else {
        fetch(URL_LOGGER, {
            method: 'POST',
            mode: 'no-cors',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        });
    }
})();
</script>
    
</body>
</html>