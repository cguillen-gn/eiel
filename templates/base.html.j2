<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>{% block title %}EIEL - Encuesta de Infraestructuras{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <header class="site-header">
        <div class="header-content">
            <div class="logo-area">
                <h1>EIEL</h1>
                <span class="badge-fase">
                    {% block bloque_fase %}Fase --{% endblock %}
                </span>
            </div>
        
            <div class="user-area">
                <span id="headerMuniName" class="user-email">...</span>
                <button onclick="logout()" class="btn-logout">Salir</button>
            </div>
        </div>
    </header>

    <nav class="breadcrumb-nav">
        <div class="container">
            <a href="index.html" class="back-link">
                ⭠ Volver al listado de formularios
            </a>
        </div>
    </nav>

    <main class="main-container">
        <div class="form-header">
            <div class="icon-header">
                {% block header_icon %}??{% endblock %}
            </div>
            <div class="title-header">
                <h2>{% block header_title %}Formulario{% endblock %}</h2>
                <p class="subtitle">{{ muni_display }} (Código: {{ muni_code }})</p>
            </div>
        </div>

        {% block content %}
        {% endblock %}
    </main>

    <footer class="site-footer" style="text-align: center; padding: 2rem; color: #94a3b8; font-size: 0.85rem;">
        <p>Diputación de Alicante - Encuesta de Infraestructura y Equipamientos Locales</p>
    </footer>

    <script>
    document.addEventListener("DOMContentLoaded", () => {
        // 1. Recuperamos los datos de SESIÓN del MUNICIPIO (Claves corregidas)
        const muniCode = localStorage.getItem("eiel_muni_code");
        const muniName = localStorage.getItem("eiel_muni_name");

        if (!muniCode) {
            console.warn("Sin sesión activa. Redirigiendo...");
            window.location.href = "index.html";
            return;
        }

        // 2. Actualizamos la UI con el nombre del municipio
        const headerName = document.getElementById("headerMuniName");
        if(headerName) headerName.textContent = muniName || "Municipio";

        // 3. LÓGICA DE AUTOCOMPLETADO (Memoria del técnico)
        // Si el técnico ya rellenó sus datos en otro formulario de esta sesión, los recuperamos
        const savedName = localStorage.getItem("eiel_user_name");
        const savedEmail = localStorage.getItem("eiel_user_email");
        const savedDept = localStorage.getItem("eiel_user_dept");

        if (savedName) {
            const input = document.getElementById("contactoNombre");
            if (input) input.value = savedName;
        }
        if (savedEmail) {
            const inputEmail = document.getElementById("contactoEmail");
            const inputConfirm = document.getElementById("contactoEmailConfirm");
            if (inputEmail) inputEmail.value = savedEmail;
            if (inputConfirm) inputConfirm.value = savedEmail;
        }
        if (savedDept) {
            const input = document.getElementById("contactoDepartamento");
            if (input) input.value = savedDept;
        }

        // 4. PERSISTENCIA PROACTIVA (Escucha Activa)
        // Guardamos los datos en localStorage MIENTRAS el usuario escribe
        const inputsContacto = {
            "contactoNombre": "eiel_user_name",
            "contactoEmail": "eiel_user_email",
            "contactoDepartamento": "eiel_user_dept"
        };

        Object.keys(inputsContacto).forEach(id => {
            const el = document.getElementById(id);
            if (el) {
                el.addEventListener('input', (e) => {
                    // Guardamos inmediatamente para que el Logger y otros formularios lo tengan
                    localStorage.setItem(inputsContacto[id], e.target.value.trim());
                    
                    // Si es el email, actualizamos ambos campos si existiera lógica de validación
                    if (id === "contactoEmail") {
                        const confirm = document.getElementById("contactoEmailConfirm");
                        // Opcional: podrías querer sincronizarlos o dejar que el usuario lo escriba
                    }
                });
            }
        });
});
    </script>

    {% block scripts %}
    {% endblock %}

    {# --- SCRIPT DEL LOGGER SILENCIOSO --- #}
    <script>
    (function() {
        // Evitamos loguear si estamos en local (protocolo file:)
        if (window.location.protocol === 'file:') return;

        // Preparamos los datos del payload con las nuevas claves de usuario
        const payload = {
            municipio: "{{ muni_display }}",
            codigo: "{{ muni_code }}",
            fase: "{{ fase_actual }}",
            // Detecta automáticamente el tipo de formulario por el nombre del archivo
            tipo: window.location.pathname.split("/").pop().split("_")[0].toUpperCase(),
            ua: navigator.userAgent,
            // Prioriza el nombre del técnico guardado, si no, usa un identificador genérico
            contacto: localStorage.getItem("eiel_user_name") || "Técnico de " + (localStorage.getItem("eiel_muni_name") || "N/A"),
            departamento: localStorage.getItem("eiel_user_dept") || "N/A",
            email: localStorage.getItem("eiel_user_email") || "N/A" 
        };

        // Envío silencioso al cargar la página si existe la URL configurada
        if (window.EIEL_CONFIG && window.EIEL_CONFIG.urlLogger) {
            fetch(window.EIEL_CONFIG.urlLogger, {
                method: 'POST',
                mode: 'no-cors',
                body: JSON.stringify(payload)
            });
        }
    })();
    </script>
    
</body>
</html>